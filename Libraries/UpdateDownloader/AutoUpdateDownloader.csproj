<Project Sdk="Microsoft.NET.Sdk" InitialTargets="GenAssInfo">
  <PropertyGroup>
    <TargetFramework>net4</TargetFramework>
    <LangVersion>latest</LangVersion>
    <AssemblyName>AltaxoUpdateDownloader</AssemblyName>
    <RootNamespace>Altaxo.Serialization.AutoUpdates</RootNamespace>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <OutputPath>..\..\rtDir\bin</OutputPath>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="Properties\AssemblyInfo.cs" Visible="true" />
  </ItemGroup>
  <ItemGroup>
    <Compile Include="..\..\Altaxo\Base\Serialization\AutoUpdates\INetFrameworkVersionDetermination.cs">
      <Link>INetFrameworkVersionDetermination.cs</Link>
    </Compile>
    <Compile Include="..\..\Altaxo\Base.Presentation\Main\Services\NetFrameworkVersionDetermination.cs">
      <Link>NetFrameworkVersionDetermination.cs</Link>
    </Compile>
    <Compile Include="..\..\Altaxo\Base\Serialization\AutoUpdates\PackageInfo.cs">
      <Link>PackageInfo.cs</Link>
    </Compile>
  </ItemGroup>
  <UsingTask TaskName="GitVersionFile" AssemblyFile="..\..\MSBuildVersioning.dll" />
  <Target Name="GenAssInfo">
    <GitVersionFile TemplateFile="Properties\AssemblyInfo.cs" DestinationFile="Properties\AssemblyInfo.autogenerated.cs" SettingsFile="..\..\MSBuildVersioning.xml" />
  </Target>
</Project>
