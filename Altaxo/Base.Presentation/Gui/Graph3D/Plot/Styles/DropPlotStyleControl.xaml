<UserControl x:Class="Altaxo.Gui.Graph3D.Plot.Styles.DropPlotStyleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:axog="clr-namespace:Altaxo.Gui;assembly=AltaxoBase"
						 xmlns:axogcd="clr-namespace:Altaxo.Gui.Common.Drawing"
						 xmlns:axogc="clr-namespace:Altaxo.Gui.Common"
 						 xmlns:axoggc="clr-namespace:Altaxo.Gui.Drawing.D3D"
 						 xmlns:axogddl="clr-namespace:Altaxo.Gui.Drawing.D3D.LineCaps"
             mc:Ignorable="d">

	<UserControl.Resources>
		<Style TargetType="Label">
			<Style.Setters>
				<Setter Property="Margin" Value="6,0,0,0" />
				<Setter Property="HorizontalAlignment" Value="Right" />
				<Setter Property="VerticalAlignment" Value="Center" />
			</Style.Setters>
		</Style>
		<Style TargetType="CheckBox">
			<Style.Setters>
				<Setter Property="Margin" Value="6,0,6,0" />
				<Setter Property="HorizontalAlignment" Value="Left" />
				<Setter Property="VerticalAlignment" Value="Center" />
			</Style.Setters>
		</Style>
	</UserControl.Resources>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" SharedSizeGroup="LabelColumn1" />
			<ColumnDefinition Width="4" />
			<ColumnDefinition Width="*" SharedSizeGroup="EditColumn1" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" MinWidth="40" SharedSizeGroup="EditColumn2" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="0" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
		</Grid.RowDefinitions>

		<GroupBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  Header="Drop targets:">
			<axogc:EnumFlagControl  x:Name="_guiDropLines" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" />
		</GroupBox>

		<CheckBox x:Name="_guiIndependentSkipFreq" Grid.Row="2"  Grid.Column="0" Content="Indep. skip freq.:" />
		<axogc:Int32UpDown x:Name="_guiSkipFrequency" Grid.Row="2" Grid.Column="2"  Minimum="1" />

		<CheckBox x:Name="_guiIndependentColor" Grid.Row="4" Grid.Column="0"  Content="Indep. color:" Checked="EhIndependentColorChanged" Unchecked="EhIndependentColorChanged" />
		<axoggc:MaterialComboBox x:Name="_guiPenMaterial"  Grid.Row="4" Grid.Column="2" />

		<Label  Grid.Row="6" Grid.Column="0" Content="Style:" />
		<axoggc:DashStyleComboBox x:Name="_guiPenDashStyle" Grid.Row="6" Grid.Column="2" />

		<Label Grid.Row="8" Grid.Column="0" Content="CrossSection" />
		<ComboBox x:Name="_guiCrossSection"  Grid.Row="8" Grid.Column="2" />

		<Label Content="Line start cap:" Grid.Row="10" Grid.Column="0" />
		<axogddl:LineCapComboBox Grid.Row="10" Grid.Column="2"  IsForEndCap="False" x:Name="_cbLineStartCap" />
		<Label Content="Min. abs. size:" Grid.Row="8" Grid.Column="4" />
		<axogcd:LineCapSizeComboBox x:Name="_cbLineStartCapSize" Grid.Row="10" Grid.Column="4"  ToolTip="Minimum absolute cap size" />
		<Label Content="Min. rel. size:" Grid.Row="8" Grid.Column="5" />
		<axogc:QuantityWithUnitTextBox  Grid.Row="10" Grid.Column ="5" x:Name="_edLineStartCapRelSize" UnitEnvironment="{x:Static axog:RelationEnvironment.Instance}" ToolTip="Minimum cap size relative to pen width" />

		<CheckBox x:Name="_guiIndependentSymbolSize" Content="Independent symbol size :"  Grid.Row="12" Grid.Column="0" />
		<axogcd:LineCapSizeComboBox x:Name="_guiSymbolSize" Grid.Row="12" Grid.Column="2" />

		<Label Content="Line width 1 = " Grid.Row="14" Grid.Column="0" />
		<axogcd:LineThicknessComboBox x:Name="_guiLineWidth1Offset" Grid.Row="14" Grid.Column="2" />
		<Label Content="+" Grid.Row="14" Grid.Column="3" />
		<axogc:QuantityWithUnitTextBox x:Name="_guiLineWidth1Factor"  Grid.Row="14" Grid.Column="4" UnitEnvironment="{x:Static axog:RelationEnvironment.Instance}" />
		<Label Content="* symbolSize" Grid.Row="14" Grid.Column="5" />

		<Label Content="Line width 2 = " Grid.Row="16" Grid.Column="0" />
		<axogcd:LineThicknessComboBox x:Name="_guiLineWidth2Offset" Grid.Row="16" Grid.Column="2" />
		<Label Content="+" Grid.Row="16" Grid.Column="3" />
		<axogc:QuantityWithUnitTextBox x:Name="_guiLineWidth2Factor"  Grid.Row="16" Grid.Column="4"  UnitEnvironment="{x:Static axog:RelationEnvironment.Instance}" />
		<Label Content="* symbolSize" Grid.Row="16" Grid.Column="5" />

		<Label Content="Line gap at start = " Grid.Row="18" Grid.Column="0" />
		<axogcd:LineThicknessComboBox x:Name="_guiGapAtStartOffset" Grid.Row="18" Grid.Column="2" />
		<Label Content="+" Grid.Row="18" Grid.Column="3" />
		<axogc:QuantityWithUnitTextBox x:Name="_guiGapAtStartFactor"  Grid.Row="18" Grid.Column="4"  UnitEnvironment="{x:Static axog:RelationEnvironment.Instance}" />
		<Label Content="* symbolSize" Grid.Row="18" Grid.Column="5" />

		<Label Content="Line gap at end = " Grid.Row="20" Grid.Column="0" />
		<axogcd:LineThicknessComboBox x:Name="_guiGapAtEndOffset" Grid.Row="20" Grid.Column="2" />
		<Label Content="+" Grid.Row="20" Grid.Column="3" />
		<axogc:QuantityWithUnitTextBox x:Name="_guiGapAtEndFactor"  Grid.Row="20" Grid.Column="4"  UnitEnvironment="{x:Static axog:RelationEnvironment.Instance}" />
		<Label Content="* symbolSize" Grid.Row="20" Grid.Column="5" />
	</Grid>
</UserControl>