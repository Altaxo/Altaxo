<UserControl x:Class="Altaxo.Gui.Graph3D.Plot.Styles.LabelPlotStyleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:axogc="clr-namespace:Altaxo.Gui.Common"
						 xmlns:axogcd="clr-namespace:Altaxo.Gui.Common.Drawing"
						 xmlns:axogdd="clr-namespace:Altaxo.Gui.Drawing.D3D"
             mc:Ignorable="d">
	<UserControl.Resources>
		<Style TargetType="Label">
			<Style.Setters>
				<Setter Property="Margin" Value="6,0,0,0" />
				<Setter Property="HorizontalAlignment" Value="Right" />
				<Setter Property="VerticalAlignment" Value="Center" />
			</Style.Setters>
		</Style>
		<Style TargetType="CheckBox">
			<Style.Setters>
				<Setter Property="Margin" Value="6,0,6,0" />
				<Setter Property="HorizontalAlignment" Value="Right" />
				<Setter Property="VerticalAlignment" Value="Center" />
			</Style.Setters>
		</Style>
	</UserControl.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Label Grid.Column="0" Grid.Row="0" Content="Label column:" />
		<StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
			<TextBox x:Name="_guiLabelTransformation" IsEnabled="True" IsReadOnly="True" />
			<TextBox x:Name="_guiLabelColumn" IsEnabled="True" IsReadOnly="True" MinWidth="100" />
		</StackPanel>
		<Label Content="Label format:" Grid.Row="0" Grid.Column="2" />
		<TextBox x:Name="_guiLabelFormat" Grid.Row="0" Grid.Column="3" />

		<CheckBox x:Name="_guiIndependentOnShiftingGroupStyles" Content="Do not shift position by shifting group styles" Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2" />

		<CheckBox x:Name="_guiIndependentLabelColor" Grid.Column="0" Grid.Row="2" Content="Indep. color:" Checked="EhIndependentColor_CheckChanged" Unchecked="EhIndependentColor_CheckChanged" />
		<axogdd:MaterialComboBox x:Name="_guiLabelBrush"  Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Left" SelectedMaterialChanged="EhLabelBrushChanged" />

		<Label Grid.Column="0" Grid.Row="4" Content="Font:" />
		<axogcd:FontFamilyComboBox x:Name="_cbFontFamily" Grid.Column="1" Grid.Row="4" />

		<Label Grid.Row="4" Grid.Column="2"  Content="Size:" />
		<axogcd:FontSizeComboBox x:Name="_cbFontSize"  Grid.Row="4" Grid.Column="3" />

		<Label Grid.Row="4" Grid.Column="4"  Content="Depth:" />
		<axogcd:FontSizeComboBox x:Name="_cbFontDepth"  Grid.Row="4" Grid.Column="5" />

		<Label  Grid.Row="6" Grid.Column="0" Content="Style:" />
		<axogcd:FontStyleComboBox x:Name="_cbFontStyle"  Grid.Row="6" Grid.Column="1" />

		<Label  Grid.Row="8" Grid.Column="0" Content="RotationX:" />
		<axogcd:RotationComboBox x:Name="_guiRotationX"  Grid.Row="8" Grid.Column="1" />

		<Label  Grid.Row="8" Grid.Column="2" Content="RotationY:" />
		<axogcd:RotationComboBox x:Name="_guiRotationY"  Grid.Row="8" Grid.Column="3" />

		<Label  Grid.Row="8" Grid.Column="4" Content="RotationZ:" />
		<axogcd:RotationComboBox x:Name="_guiRotationZ"  Grid.Row="8" Grid.Column="5" />

		<Label Grid.Row="10" Grid.Column="0" Content="AlignmentX:" />
		<ComboBox x:Name="_guiAlignmentX"  Grid.Row="10" Grid.Column="1" SelectionChanged="EhAlignmentXChanged" />

		<Label Grid.Row="10" Grid.Column="2"  Content="AlignmentY:" />
		<ComboBox x:Name="_guiAlignmentY"  Grid.Row="10" Grid.Column="3" SelectionChanged="EhAlignmentYChanged" />

		<Label Grid.Row="10" Grid.Column="4"  Content="AlignmentZ:" />
		<ComboBox x:Name="_guiAlignmentZ"  Grid.Row="10" Grid.Column="5" SelectionChanged="EhAlignmentZChanged" />

		<Label Grid.Row="12" Grid.Column="0" Content="OffsetX:" />
		<axogc:QuantityWithUnitTextBox x:Name="_guiOffsetX" Grid.Row="12" Grid.Column="1" />

		<Label Grid.Row="12" Grid.Column="2" Content="OffsetY:" />
		<axogc:QuantityWithUnitTextBox x:Name="_guiOffsetY" Grid.Row="12" Grid.Column="3" />

		<Label Grid.Row="12" Grid.Column="4" Content="OffsetZ:" />
		<axogc:QuantityWithUnitTextBox x:Name="_guiOffsetZ" Grid.Row="12" Grid.Column="5" />

		<CheckBox x:Name="_guiAttachToAxis" Grid.Column="0" Grid.Row="14" Content="Attach to axis:" Checked="EhAttachToAxis_CheckedChanged" Unchecked="EhAttachToAxis_CheckedChanged" />
		<ComboBox x:Name="_guiAttachedAxis" Grid.Column="1" Grid.Row="14" SelectionChanged="EhAttachedAxisChanged" />

		<Label Grid.Column="0" Grid.Row="16" Content="Background:" />
		<ComboBox x:Name="_cbBackgroundStyle" Grid.Column="1" Grid.Row="16" />
		<Label Grid.Column="2" Grid.Row="16" Content="Brush:" />
		<axogdd:MaterialComboBox x:Name="_cbBackgroundBrush" Grid.Row="16" Grid.Column="3" Grid.ColumnSpan="3" HorizontalAlignment="Left" />
		<StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="18" Margin="0,0,4,0" VerticalAlignment="Center" HorizontalAlignment="Right">
			<TextBlock Text="Background" />
			<TextBlock Text="color linkage:" />
		</StackPanel>
		<axogc:SingleChoiceRadioStackPanel x:Name="_guiBackgroundColorLinkage" Grid.Column="1" Grid.Row="18" SelectionChanged="EhBackgroundColorLinkageChanged" />

		<CheckBox x:Name="_guiIndependentSkipFrequency" Grid.Row="20" Grid.Column="0" Content="Indep. skip freq.:" />
		<axogc:Int32UpDown x:Name="_guiSkipFrequency"  Grid.Row="20" Grid.Column="1" Minimum="1" />
	</Grid>
</UserControl>