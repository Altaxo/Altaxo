<UserControl x:Class="Altaxo.Gui.Calc.FitFunctions.Chemistry.MassBasedFloryDistributionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Altaxo.Gui.Calc.FitFunctions.Chemistry;assembly=AltaxoBase"
             xmlns:axogc="clr-namespace:Altaxo.Gui.Common"
             xmlns:axogcc="clr-namespace:Altaxo.Gui.Common.Converters"
             d:DataContext="{d:DesignInstance Type=local:MassBasedFloryDistributionController}"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="4" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               Grid.Column="0"
               Content="Number of terms:" />
        <axogc:Int32UpDown Grid.Row="0"
                           Grid.Column="2"
                           Minimum="0"
                           Value="{Binding Path=NumberOfTerms}" />

        <Label Grid.Row="2"
               Grid.Column="0"
               Content="Order of baseline polynomial:" />
        <axogc:Int32UpDown Grid.Row="2"
                           Grid.Column="2"
                           Minimum="-1"
                           Value="{Binding Path=OrderOfBaselinePolynominal}" />

        <CheckBox Grid.Row="4"
                  Grid.ColumnSpan="3"
                  Content="X-axis is decadic logarithm of molecular weight"
                  IsChecked="{Binding IndependentVariableIsDecadicLogarithm}" />
        <Label Grid.Row="6"
               Grid.Column="0"
               Content="Molecular weight of monomer:" />
        <axogc:NumericDoubleTextBox Grid.Row="6"
                                    Grid.Column="2"
                                    Width="100"
                                    MinValue="0.5"
                                    SelectedValue="{Binding Path=MolecularWeightOfMonomerUnit}" />

    </Grid>
</UserControl>
