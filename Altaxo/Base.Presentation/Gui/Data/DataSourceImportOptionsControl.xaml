<UserControl x:Class="Altaxo.Gui.Data.DataSourceImportOptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
						 xmlns:agc="clr-namespace:Altaxo.Gui.Common">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<GroupBox Header="Update when:" Grid.Row="0" Grid.ColumnSpan="2" Padding="0,4,0,0" Margin="0,0,0,4">
			<agc:SingleChoiceRadioStackPanel x:Name="_guiTrigger"  Orientation="Horizontal" />
		</GroupBox>
		<CheckBox x:Name="_guiExecuteWksScriptAfterImport"  Grid.Row="1" Content="Execute worksheet script after import" ToolTip="If choosing this option, the worksheet script will be executed every time data is imported from the data source." Margin="0,0,8,0" />
		<CheckBox x:Name="_guiDoNotSaveTableData"  Grid.Row="1" Grid.Column="1" Content="Do not save table data" ToolTip="If choosing this option, table data will not be saved in the Altaxo project file! Use this option carefully and only if you can always restore the data from the data source!" />
		<Label Content="Minimum time between updates (s):" Grid.Row="2" HorizontalAlignment="Right" />
		<agc:NumericDoubleTextBox x:Name="_guiMinTimeBetweenUpdates" Grid.Row="2" Grid.Column="1" AllowInfiniteValues="False" AllowNaNValues="False" Margin="0,2,0,2" />
		<Label Content="Polling time (s):" Grid.Row="3"  HorizontalAlignment="Right" />
		<agc:NumericDoubleTextBox x:Name="_guiPollingTime" Grid.Row="3" Grid.Column="1" AllowInfiniteValues="False" AllowNaNValues="False" Margin="0,2,0,2" />
	</Grid>
</UserControl>