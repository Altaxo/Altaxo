<UserControl x:Class="Altaxo.Gui.Data.ExpandCyclingVariableControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
						 xmlns:AltaxoCommon="clr-namespace:Altaxo.Gui.Common"
	mc:Ignorable="d" 
             >
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition MinWidth="140"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="5" />
			<RowDefinition />
			<RowDefinition Height="5" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="5" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="5" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="5" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Label Grid.Column="0" Grid.Row="0">Column with cycling variable:</Label>
		<Label Grid.Column="0" Grid.Row="2">Columns to average over repeat period:</Label>
		<Label Grid.Column="0" Grid.Row="4">Destination output:</Label>
		<Label Grid.Column="0" Grid.Row="6">Destination X:</Label>
		<Label Grid.Column="0" Grid.Row="8">Destination column sorting:</Label>
		<Label Grid.Column="0" Grid.Row="10">Destination row sorting:</Label>

		<ComboBox Grid.Column="1" Grid.Row="0" x:Name="_cbColWithCyclingVar"/>
		<AltaxoCommon:MultipleChoiceListView Grid.Column="1" Grid.Row="2" x:Name="_lbColsToAverage" MaxHeight="200"/>
		<AltaxoCommon:SingleChoiceRadioStackPanel Grid.Column="1" Grid.Row="4" Orientation="Vertical" x:Name="_chDestinationOutput"/>
		<AltaxoCommon:SingleChoiceRadioStackPanel Grid.Column="1" Grid.Row="6" Orientation="Vertical" x:Name="_chDestinationX"/>
		<AltaxoCommon:SingleChoiceRadioStackPanel Grid.Column="1" Grid.Row="8" Orientation="Vertical" x:Name="_chDestinationColSort"/>
		<AltaxoCommon:SingleChoiceRadioStackPanel Grid.Column="1" Grid.Row="10" Orientation="Vertical" x:Name="_chDestinationRowSort"/>
	</Grid>
</UserControl>
