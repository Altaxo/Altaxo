<UserControl x:Class="Altaxo.Gui.Drawing.ColorManagement.NamedColorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Altaxo.Gui.Drawing.ColorManagement"
						 xmlns:axogc="clr-namespace:Altaxo.Gui.Common"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="4" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<TabControl x:Name="_guiTabControl" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" />

		<Grid Grid.Row="2" Grid.Column="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="4" />
				<ColumnDefinition Width="*" />
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="4" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Label Grid.Row="0" Grid.Column="0" Content="Alpha:" />
			<axogc:Int32UpDown x:Name="_guiAlphaValue" Grid.Row="0" Grid.Column="2" Value="255" Minimum="0" Maximum="255" ValueChanged="EhAlphaValueChanged" />
			<Label Grid.Row="2" Grid.Column="0" Content="Name:" />
			<TextBox x:Name="_guiColorName" Grid.Row="2" Grid.Column="2" Text="Aqua" />
		</Grid>
	</Grid>
</UserControl>