<UserControl x:Class="Altaxo.Gui.Common.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Altaxo.Gui.Common"
             >
    <Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<TextBox Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=local:NumericUpDown}, Path=Value}"  MinWidth="30" TextAlignment="Right" Name="_edTextBox"/>
		<RepeatButton Grid.Column="1" Grid.Row="0" Command="{x:Static local:NumericUpDown.IncreaseCommand}" >/\</RepeatButton>
		<RepeatButton Grid.Column="2" Grid.Row="0" Command="{x:Static local:NumericUpDown.DecreaseCommand}">\/</RepeatButton>
	</Grid>
</UserControl>
