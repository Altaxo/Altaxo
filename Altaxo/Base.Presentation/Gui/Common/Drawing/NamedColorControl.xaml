<UserControl x:Class="Altaxo.Gui.Common.Drawing.NamedColorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Altaxo.Gui.Common.Drawing" 
             xmlns:local_model="clr-namespace:Altaxo.Gui.Common.Drawing;assembly=AltaxoBase" 
             d:DataContext="{d:DesignInstance Type=local_model:NamedColorController}"
             mc:Ignorable="d" 
             >
    <local:ColorComboBox SelectedColor="{Binding NamedColor, Mode=TwoWay}" />
</UserControl>
