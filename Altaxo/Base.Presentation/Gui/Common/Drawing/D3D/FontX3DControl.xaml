<UserControl x:Class="Altaxo.Gui.Common.Drawing.D3D.FontX3DControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
 						 xmlns:axogcd="clr-namespace:Altaxo.Gui.Common.Drawing"
             mc:Ignorable="d"
>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="8" />
			<RowDefinition Height="*" />
			<RowDefinition Height="4" />
		</Grid.RowDefinitions>
		<Label Grid.Column="0" Grid.Row="0" Content="Font:" />
		<axogcd:FontFamilyComboBox x:Name="_guiFontFamily" Grid.Column="1" Grid.Row="0" />
		<Label Grid.Column="2" Grid.Row="0" Content="Size:" />
		<axogcd:FontSizeComboBox x:Name="_guiFontSize" Grid.Column="3" Grid.Row="0" />
		<Label Grid.Column="4" Grid.Row="0" Content="Depth:" />
		<axogcd:FontSizeComboBox x:Name="_guiFontDepth" Grid.Column="5" Grid.Row="0" />
	</Grid>
</UserControl>
