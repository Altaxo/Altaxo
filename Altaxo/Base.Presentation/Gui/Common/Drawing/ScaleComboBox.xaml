<local:DimensionfulQuantityImageComboBox x:Class="Altaxo.Gui.Common.Drawing.ScaleComboBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Altaxo.Gui.Common.Drawing"
    SnapsToDevicePixels="True">
	<ComboBox.Resources>
		<DataTemplate  DataType="{x:Type local:ImageComboBoxItem}">
			<StackPanel Orientation="Horizontal" Margin="2">
				<Image Source="{Binding Image}" MaxHeight="24" MaxWidth="24" />
				<TextBlock Text="{Binding Path=Text}" Margin="4 0 4 0" VerticalAlignment="Center" />
			</StackPanel>
		</DataTemplate>
	</ComboBox.Resources>
</local:DimensionfulQuantityImageComboBox>
