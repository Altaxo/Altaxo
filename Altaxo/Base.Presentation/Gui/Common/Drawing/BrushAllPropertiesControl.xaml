<UserControl x:Class="Altaxo.Gui.Common.Drawing.BrushAllPropertiesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
						 xmlns:axogcd="clr-namespace:Altaxo.Gui.Common.Drawing"
             mc:Ignorable="d" 
             >
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="4"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="4"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="4"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="4"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="4"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="4"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<Label Grid.Column="0" Grid.Row="0">Color:</Label>
		<Label Grid.Column="0" Grid.Row="2" x:Name="_lblBackColor">BackColor:</Label>
		<Label Grid.Column="0" Grid.Row="4" x:Name="_lblWrapMode">Wrap mode:</Label>
		<Label Grid.Column="0" Grid.Row="6" x:Name="_lblGradientFocus">Focus:</Label>
		<Label Grid.Column="0" Grid.Row="8" x:Name="_lblColorScale">Color scale:</Label>
		<Label Grid.Column="0" Grid.Row="10" x:Name="_lblTextureScale">Texture scale:</Label>

		<Label Grid.Column="2" Grid.Row="0" x:Name="_lblBrushType">Brush type:</Label>
		<Label Grid.Column="2" Grid.Row="2" x:Name="_lblHatchStyle">Hatch style:</Label>
		<Label Grid.Column="2" Grid.Row="4" x:Name="_lblGradientMode">Gradient mode:</Label>
		<Label Grid.Column="2" Grid.Row="6" x:Name="_lblGradientShape">Gradient shape:</Label>
		<Label Grid.Column="2" Grid.Row="8" x:Name="_lblExchangeColors">Exchange colors:</Label>
		<Label Grid.Column="2" Grid.Row="10" x:Name="_lblTextureImage">Texture:</Label>

		<axogcd:ColorComboBox Grid.Column="1" Grid.Row="0" x:Name="_cbColor"/>
		<axogcd:ColorComboBox Grid.Column="1" Grid.Row="2" x:Name="_cbBackColor"/>
		<axogcd:WrapModeComboBox Grid.Column="1" Grid.Row="4" x:Name="_cbWrapMode"/>
		<axogcd:GradientFocusComboBox Grid.Column="1" Grid.Row="6" x:Name="_cbGradientFocus"/>
		<axogcd:ColorScaleComboBox Grid.Column="1" Grid.Row="8" x:Name="_cbColorScale"/>
		<axogcd:TextureScaleComboBox Grid.Column="1" Grid.Row="10" x:Name="_cbTextureScale"/>

		<axogcd:BrushTypeComboBox Grid.Column="3" Grid.Row="0" x:Name="_cbBrushType"/>
		<axogcd:HatchStyleComboBox Grid.Column="3" Grid.Row="2" x:Name="_cbHatchStyle"/>
		<axogcd:LinearGradientModeComboBox Grid.Column="3" Grid.Row="4" x:Name="_cbGradientMode"/>
		<axogcd:LinearGradientShapeComboBox Grid.Column="3" Grid.Row="6" x:Name="_cbGradientShape"/>
		<CheckBox Grid.Column="3" Grid.Row="8" x:Name="_chkExchangeColors" VerticalAlignment="Center" />
		<axogcd:TextureImageComboBox Grid.Column="3" Grid.Row="10" x:Name="_cbTextureImage"/>
		<GroupBox  Grid.Column="0" Grid.Row="12" Grid.ColumnSpan="4"  Header="Preview:">
			<Grid>
				<Rectangle Name="_previewRect" MinHeight="40" Fill="Azure"/>
				<Image Height="{Binding ElementName=_previewRect, Path=ActualHeight}" Width="{Binding ElementName=_previewRect, Path=ActualWidth}"  StretchDirection="Both" Stretch="Fill" x:Name="_previewPanel"/>
			</Grid>
		</GroupBox>
	</Grid>
</UserControl>
