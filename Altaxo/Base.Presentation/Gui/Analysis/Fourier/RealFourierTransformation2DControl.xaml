<UserControl
    x:Class="Altaxo.Gui.Analysis.Fourier.RealFourierTransformation2DControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:axog="clr-namespace:Altaxo.Gui;assembly=AltaxoBase"
    xmlns:axogc="clr-namespace:Altaxo.Gui.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MinWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Rectangle
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="4"
            HorizontalAlignment="Stretch"
            Fill="AliceBlue" />
        <Rectangle
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="4"
            HorizontalAlignment="Stretch"
            Fill="AliceBlue" />
        <Rectangle
            Grid.Row="5"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="4"
            HorizontalAlignment="Stretch"
            Fill="AliceBlue" />
        <Rectangle
            Grid.Row="7"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="4"
            HorizontalAlignment="Stretch"
            Fill="AliceBlue" />
        <Rectangle
            Grid.Row="9"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="4"
            HorizontalAlignment="Stretch"
            Fill="AliceBlue" />
        <Rectangle
            Grid.Row="11"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="4"
            HorizontalAlignment="Stretch"
            Fill="AliceBlue" />
        <Rectangle
            Grid.Row="13"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="4"
            HorizontalAlignment="Stretch"
            Fill="AliceBlue" />
        <Rectangle
            Grid.Row="15"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="4"
            HorizontalAlignment="Stretch"
            Fill="AliceBlue" />
        <Rectangle
            Grid.Row="17"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="4"
            HorizontalAlignment="Stretch"
            Fill="AliceBlue" />
        <Rectangle
            Grid.Row="19"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="4"
            HorizontalAlignment="Stretch"
            Fill="AliceBlue" />
        <Rectangle
            Grid.Row="23"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Height="4"
            HorizontalAlignment="Stretch"
            Fill="AliceBlue" />

        <CheckBox
            x:Name="_guiIsUserDefinedRowIncrement"
            Grid.Row="0"
            Grid.Column="0">
            User defined row increment:
        </CheckBox>
        <axogc:NumericDoubleTextBox
            x:Name="_guiXIncrement"
            Grid.Row="0"
            Grid.Column="1"
            IsEnabled="{Binding ElementName=_guiIsUserDefinedRowIncrement, Path=IsChecked}" />

        <CheckBox
            x:Name="_guiIsUserDefinedColumnIncrement"
            Grid.Row="2"
            Grid.Column="0">
            User defined column increment:
        </CheckBox>
        <axogc:NumericDoubleTextBox
            x:Name="_guiYIncrement"
            Grid.Row="2"
            Grid.Column="1"
            IsEnabled="{Binding ElementName=_guiIsUserDefinedColumnIncrement, Path=IsChecked}" />

        <CheckBox
            x:Name="_guiUseReplacementValueforNaN"
            Grid.Row="4"
            VerticalAlignment="Center"
            Content="Use replacement value for NaN:" />
        <axogc:NumericDoubleTextBox
            x:Name="_guiReplacementValueForNaN"
            Grid.Row="4"
            Grid.Column="1"
            IsEnabled="{Binding ElementName=_guiUseReplacementValueforNaN, Path=IsChecked}" />

        <CheckBox
            x:Name="_guiUseReplacementValueForInfinity"
            Grid.Row="6"
            VerticalAlignment="Center"
            Content="Use replacement value for infinite values:" />
        <axogc:NumericDoubleTextBox
            x:Name="_guiReplacementValueForInfinite"
            Grid.Row="6"
            Grid.Column="1"
            IsEnabled="{Binding ElementName=_guiUseReplacementValueForInfinity, Path=IsChecked}" />

        <CheckBox
            x:Name="_guiUseDataPretreatment"
            Grid.Row="8"
            VerticalAlignment="Center"
            Content="Subtract regression of order:" />
        <axogc:Int32UpDown
            x:Name="_guiDataPretreatmentOrder"
            Grid.Row="8"
            Grid.Column="1"
            IsEnabled="{Binding ElementName=_guiUseDataPretreatment, Path=IsChecked}"
            Maximum="3"
            Minimum="0" />

        <Label Grid.Row="10" Content="Fourier window:" />
        <ComboBox
            x:Name="_guiFourierWindow"
            Grid.Row="10"
            Grid.Column="1"
            SelectionChanged="EhFourierWindowChanged" />

        <Label Grid.Row="12" Content="Use this fraction of row frequencies:" />
        <axogc:QuantityWithUnitTextBox
            x:Name="_guiRowFrequencyFraction"
            Grid.Row="12"
            Grid.Column="1"
            UnitEnvironment="{x:Static axog:RelationEnvironment.Instance}" />

        <Label Grid.Row="14" Content="Use this fraction of column frequencies:" />
        <axogc:QuantityWithUnitTextBox
            x:Name="_guiColumnFrequencyFraction"
            Grid.Row="14"
            Grid.Column="1"
            UnitEnvironment="{x:Static axog:RelationEnvironment.Instance}" />

        <CheckBox
            x:Name="_guiCenterFrequencies"
            Grid.Row="16"
            VerticalAlignment="Center"
            Content="Center output frequencies" />

        <Label Grid.Row="18">Output:</Label>
        <StackPanel
            x:Name="_guiOutputQuantities"
            Grid.Row="18"
            Grid.Column="1" />

        <CheckBox
            x:Name="_guiOutputFrequencyHeaderColumns"
            Grid.Row="20"
            Content="Output frequency header columns: " />
        <Label Grid.Row="21" Content="Freqency row header name:" />
        <TextBox
            x:Name="_guiFrequencyRowHeaderColumnName"
            Grid.Row="21"
            Grid.Column="1"
            IsEnabled="{Binding ElementName=_guiOutputFrequencyHeaderColumns, Path=IsChecked}" />
        <Label Grid.Row="22" Content="Frequency column header name:" />
        <TextBox
            x:Name="_guiFrequencyColumnHeaderColumnName"
            Grid.Row="22"
            Grid.Column="1"
            IsEnabled="{Binding ElementName=_guiOutputFrequencyHeaderColumns, Path=IsChecked}" />

        <CheckBox
            x:Name="_guiOutputPeriodHeaderColumns"
            Grid.Row="24"
            Content="Output period header columns: " />
        <Label Grid.Row="25" Content="Period row header name:" />
        <TextBox
            x:Name="_guiPeriodRowHeaderColumnName"
            Grid.Row="25"
            Grid.Column="1"
            IsEnabled="{Binding ElementName=_guiOutputPeriodHeaderColumns, Path=IsChecked}" />
        <Label Grid.Row="26" Content="Period column header name:" />
        <TextBox
            x:Name="_guiPeriodColumnHeaderColumnName"
            Grid.Row="26"
            Grid.Column="1"
            IsEnabled="{Binding ElementName=_guiOutputPeriodHeaderColumns, Path=IsChecked}" />
    </Grid>
</UserControl>
