<UserControl x:Class="Altaxo.Gui.Analysis.Spectroscopy.Calibration.XCalibrationByDataSourceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Altaxo.Gui.Analysis.Spectroscopy.Calibration;assembly=AltaxoBase" 
             d:DataContext="{d:DesignInstance Type=local:XCalibrationByDataSourceController}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" 
               Content="Tables containing calibrations:"/>
        <ComboBox Grid.Row="2"
                  ItemsSource="{Binding AvailableCalibrationTables.Items}"
                  SelectedItem="{Binding AvailableCalibrationTables.SelectedItem, Mode=TwoWay}"/>
    </Grid>
</UserControl>
