<UserControl x:Class="Altaxo.Gui.Analysis.Multivariate.DimensionReductionByFactorizationMethodControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Altaxo.Gui.Analysis.Multivariate"
             xmlns:axogc="clr-namespace:Altaxo.Gui.Common"
             xmlns:multivariate="clr-namespace:Altaxo.Gui.Analysis.Multivariate;assembly=AltaxoBase"
             d:DataContext="{d:DesignInstance Type=multivariate:DimensionReductionByFactorizationMethodController}"
             mc:Ignorable="d" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="4" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
               Grid.Column="0"
               Content="Factorization method:" />

        <ComboBox Grid.Row="0"
                  Grid.Column="2"
                  ItemsSource="{Binding Method.Items}"
                  SelectedItem="{Binding Method.SelectedItem, Mode=TwoWay}"
                  />

        <Label Grid.Row="2"
               Grid.Column="0"
               Content="Maximum number of factors to calculate:" />
        <axogc:Int32UpDown Grid.Row="2"
                           Grid.Column="2"
                           Minimum="1"
                           Value="{Binding MaximumNumberOfFactors}" />
    </Grid>
</UserControl>
