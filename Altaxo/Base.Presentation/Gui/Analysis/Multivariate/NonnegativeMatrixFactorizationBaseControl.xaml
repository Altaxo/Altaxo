<UserControl x:Class="Altaxo.Gui.Analysis.Multivariate.NonnegativeMatrixFactorizationBaseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Altaxo.Gui.Analysis.Multivariate;assembly=AltaxoBase"
             xmlns:axogc="clr-namespace:Altaxo.Gui.Common"
             xmlns:axogcc="clr-namespace:Altaxo.Gui.Common.Converters"
             d:DataContext="{d:DesignInstance Type=local:NonnegativeMatrixFactorizationBaseController}"
             mc:Ignorable="d" 
             >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="4" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
               Grid.Column="0"
               Content="Initialization:" />
        <ComboBox Grid.Row="0"
                  Grid.Column="2"
                  ItemsSource="{Binding InitializationMethod.Items}"
                  SelectedItem="{Binding InitializationMethod.SelectedItem}"
                  />

            <Label Grid.Row="2"
               Grid.Column="0"
               Content="Max. number of iterations:" />
        <axogc:Int32UpDown Grid.Row="2"
                           Grid.Column="2"
                           Minimum="1"
                           Maximum="1000000"
                           Value="{Binding MaximumNumberOfIterations}" />

        <Label Grid.Row="4"
               Grid.Column="0"
               Content="No. of additional trials:" />
        <axogc:Int32UpDown Grid.Row="4"
                           Grid.Column="2"
                           Minimum="0"
                           Value="{Binding NumberOfAdditionalTrials}" />
        <Label Grid.Row="6"
               Grid.Column="0"
               Content="Tolerance:" />
        <axogc:NumericDoubleTextBox Grid.Row="6"
                                    Grid.Column="2"
                                    DisallowNegativeValues="True"
                                    SelectedValue="{Binding Tolerance}" />

        <Label Grid.Row="8"
               Grid.Column="0"
               Content="Lambda (factors):"
               Visibility="{Binding AreLambdasVisible, Converter={x:Static axogcc:FalseToVisibilityCollapsedConverter.Instance}}"/>
        <axogc:NumericDoubleTextBox Grid.Row="8"
                                    Grid.Column="2"
                                    DisallowNegativeValues="True"
                                    SelectedValue="{Binding LambdaW}" 
                                    Visibility="{Binding AreLambdasVisible, Converter={x:Static axogcc:FalseToVisibilityCollapsedConverter.Instance}}"/>

        <Label Grid.Row="10"
               Grid.Column="0"
               Content="Lambda (loads):"
               Visibility="{Binding AreLambdasVisible, Converter={x:Static axogcc:FalseToVisibilityCollapsedConverter.Instance}}" />
        <axogc:NumericDoubleTextBox Grid.Row="10"
                                    Grid.Column="2"
                                    DisallowNegativeValues="True"
                                    SelectedValue="{Binding LambdaH}"
                                    Visibility="{Binding AreLambdasVisible, Converter={x:Static axogcc:FalseToVisibilityCollapsedConverter.Instance}}"/>

    </Grid>
</UserControl>
