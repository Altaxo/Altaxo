<UserControl x:Class="Altaxo.Gui.Analysis.Multivariate.DimensionReductionOutputOptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Altaxo.Gui.Analysis.Multivariate"
             xmlns:axogc="clr-namespace:Altaxo.Gui.Common"
             xmlns:multivariate="clr-namespace:Altaxo.Gui.Analysis.Multivariate;assembly=AltaxoBase"
             d:DataContext="{d:DesignInstance Type=multivariate:DimensionReductionOutputOptionsController}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="4" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
        </Grid.RowDefinitions>

        <CheckBox Grid.Row="0"
                  Content="Include auxiliary data from ensemble preprocessing"
                  IsChecked="{Binding IncludeEnsemblePreprocessingAuxiliaryData, Mode=TwoWay}" />
        <CheckBox Grid.Row="2"
                  Content="Include preprocessed spectra"
                  IsChecked="{Binding IncludePreprocessedSpectra, Mode=TwoWay}" />
    </Grid>
</UserControl>
