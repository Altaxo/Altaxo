<UserControl x:Class="Altaxo.Gui.Analysis.Multivariate.DimensionReductionOptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:axogc="clr-namespace:Altaxo.Gui.Common"
             xmlns:multivariate="clr-namespace:Altaxo.Gui.Analysis.Multivariate;assembly=AltaxoBase"
             d:DataContext="{d:DesignInstance Type=multivariate:DimensionReductionOptionsController}"
             mc:Ignorable="d" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
        </Grid.RowDefinitions>
        <GroupBox Grid.Row="0">
            <GroupBox.Header>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Analysis method: " />
                    <ComboBox ItemsSource="{Binding AnalysisMethods.Items}"
                              SelectedItem="{Binding AnalysisMethods.SelectedItem, Mode=TwoWay}" />
                </StackPanel>
            </GroupBox.Header>
                <ContentControl Content="{Binding MethodController.ViewObject}" Margin="0,4,0,0" HorizontalAlignment="Stretch" />
        </GroupBox>

        <GroupBox Grid.Row="8" Header="Spectrum preprocessing:">
            <StackPanel Orientation="Vertical">
                <ContentControl Content="{Binding SingleSpectrumPreprocessorController.ViewObject}"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Grid.Row="10" Header="Output options:">
            <ContentControl Content="{Binding OutputOptionsController.ViewObject}" />
        </GroupBox>
    </Grid>
</UserControl>
