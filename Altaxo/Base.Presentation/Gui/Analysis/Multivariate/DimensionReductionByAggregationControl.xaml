<UserControl x:Class="Altaxo.Gui.Analysis.Multivariate.DimensionReductionByAggregationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Altaxo.Gui.Analysis.Multivariate"
             xmlns:axogc="clr-namespace:Altaxo.Gui.Common"
             xmlns:multivariate="clr-namespace:Altaxo.Gui.Analysis.Multivariate;assembly=AltaxoBase"
             d:DataContext="{d:DesignInstance Type=multivariate:DimensionReductionByAggregationController}"
             mc:Ignorable="d" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="200" />
            <ColumnDefinition Width="4" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               Grid.Column="0"
               Content="Type(s) of aggregation:" />

        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding AggregationKinds}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="True"
                  CanUserDeleteRows="True"
                  HeadersVisibility="All"
                  IsReadOnly="False"
                  RowHeaderWidth="16">
            <DataGrid.Columns>
                <!-- ComboBox column bound to Enum -->
                <DataGridComboBoxColumn Header="Aggregation type"
                                        Width="*" MinWidth="160"
                                        SelectedItemBinding="{Binding Value, Mode=TwoWay}"
                                        ItemsSource="{x:Static multivariate:DimensionReductionByAggregationController.AvailableAggregationKinds}" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
