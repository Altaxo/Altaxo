<UserControl x:Class="Altaxo.Gui.Worksheet.SpectralPreprocessingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:worksheet="clr-namespace:Altaxo.Gui.Worksheet;assembly=AltaxoBase" d:DataContext="{d:DesignInstance Type=worksheet:SpectralPreprocessingController}"
             xmlns:axogc="clr-namespace:Altaxo.Gui.Common"
             mc:Ignorable="d">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
		</Grid.RowDefinitions>
		<GroupBox Grid.Column="0" Grid.Row="0" Header="Preprocessing">
            <axogc:SingleChoiceRadioStackPanel ItemsSource="{Binding SpectralPreprocessingMethods}"/>
		</GroupBox>
		<GroupBox Grid.Column="1" Grid.Row="0" Header="Detrending">
            <axogc:SingleChoiceRadioStackPanel ItemsSource="{Binding DetrendingMethods}"/>
        </GroupBox>

		<CheckBox Grid.Column="0" Grid.Row="2" Content="Variance scale (spectral ensemble)" IsChecked="{Binding EnsembleScale}" />
	</Grid>
</UserControl>
