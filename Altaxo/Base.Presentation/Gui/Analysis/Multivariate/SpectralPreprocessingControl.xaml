<UserControl x:Class="Altaxo.Gui.Worksheet.SpectralPreprocessingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:worksheet="clr-namespace:Altaxo.Gui.Worksheet;assembly=AltaxoBase" d:DataContext="{d:DesignInstance Type=worksheet:SpectralPreprocessingController}"
             xmlns:axogc="clr-namespace:Altaxo.Gui.Common"
             mc:Ignorable="d">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
		</Grid.RowDefinitions>
		<GroupBox Grid.Column="0" Grid.Row="0" Header="Preprocessing">
            <axogc:SingleChoiceRadioStackPanelDC ItemsSource="{Binding SpectralPreprocessingMethods.Items}"
                                                 SelectedItem="{Binding SpectralPreprocessingMethods.SelectedItem, Mode=TwoWay}"
                                                 Orientation="Vertical"/>
		</GroupBox>
		<GroupBox Grid.Column="1" Grid.Row="0" Header="Detrending">
            <axogc:SingleChoiceRadioStackPanelDC ItemsSource="{Binding DetrendingMethods.Items}"
                                                 SelectedItem="{Binding DetrendingMethods.SelectedItem, Mode=TwoWay}"
                                                 Orientation="Vertical"/>
        </GroupBox>

		<CheckBox Grid.Column="0" Grid.Row="2" 
                  IsChecked="{Binding EnsembleScale, Mode=TwoWay}" 
                  Content="Variance scale (spectral ensemble)" />
	</Grid>
</UserControl>
