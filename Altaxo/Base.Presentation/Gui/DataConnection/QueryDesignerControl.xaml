<UserControl x:Class="Altaxo.Gui.DataConnection.QueryDesignerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<ToolBar Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
			<Button x:Name="_btnConnString" ToolTip="Select connection string" Click="_btnConnString_Click" />
			<ToggleButton x:Name="_btnGroupBy" ToolTip="Group results" Click="_btnGroupBy_Click" />
			<Button x:Name="_btnProperties" ToolTip="Query properties" Click="_btnProperties_Click" />
			<Button x:Name="_btnCheckSql" ToolTip="Check SQL syntax" Click="_btnCheckSql_Click" />
			<Button x:Name="_btnViewResults" ToolTip="View query results" Click="_btnViewResults_Click" />
			<Button x:Name="_btnClearQuery" ToolTip="Clear query" Click="_btnClearQuery_Click" />
		</ToolBar>
		<TreeView x:Name="_treeTables" Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" MouseDoubleClick="EhTreeMouseDoubleClick" ContextMenuOpening="EhTreeView_ContextMenuOpening">
			<TreeView.Resources>
				<ContextMenu x:Key="TableItemContextMenu">
					<MenuItem Header="Hide this table" Click="EhTreeMenu_HideThisTable" />
					<MenuItem Header="Related tables" Click="EhTreeMenu_RelatedTables" />
				</ContextMenu>
			</TreeView.Resources>
			<TreeView.ContextMenu>
				<ContextMenu>
					<MenuItem Header="Hide this table" Click="EhTreeMenu_HideThisTable" />
					<MenuItem Header="Show all tables" Click="EhTreeMenu_ShowAllTables" />
					<MenuItem Header="Related tables" Click="EhTreeMenu_RelatedTables" />
				</ContextMenu>
			</TreeView.ContextMenu>
			<TreeView.ItemTemplate>
				<HierarchicalDataTemplate ItemsSource="{Binding Nodes}">
					<TextBlock Text="{Binding Text}" />
				</HierarchicalDataTemplate>
			</TreeView.ItemTemplate>
		</TreeView>
		<DataGrid x:Name="_grid" Grid.Row="1" Grid.Column="1" CellEditEnding="EhGrid_CellEndEdit" BeginningEdit="EhGrid_BeginEdit">
		</DataGrid>
		<TextBox x:Name="_txtSql" Grid.Row="2" Grid.Column="1" AcceptsReturn="True" AcceptsTab="True"></TextBox>
		<Label x:Name="_lblStatus" Grid.Row="3" Grid.Column="0" Content="adfasdf" />
	</Grid>
</UserControl>