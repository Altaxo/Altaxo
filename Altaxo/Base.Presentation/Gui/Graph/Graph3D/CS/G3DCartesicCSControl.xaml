<UserControl x:Class="Altaxo.Gui.Graph.Graph3D.CS.G3DCartesicCSControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:cs="clr-namespace:Altaxo.Gui.Graph.Graph3D.CS;assembly=AltaxoBase" d:DataContext="{d:DesignInstance Type=cs:G3DCartesicCSController}"
             mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
        <CheckBox Grid.Row="0"  Content="Exchange X-Y (X is vertical)" IsChecked="{Binding ExchangeXY, Mode=TwoWay}"/>
        <CheckBox Grid.Row="2"  Content="Reverse X" IsChecked="{Binding ReverseX, Mode=TwoWay}"/>
        <CheckBox Grid.Row="4" Content="Reverse Y" IsChecked="{Binding ReverseY, Mode=TwoWay}"/>
        <CheckBox Grid.Row="6" Content="Reverse Z" IsChecked="{Binding ReverseZ, Mode=TwoWay}"/>
	</Grid>
</UserControl>
