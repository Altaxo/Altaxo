<UserControl
    x:Class="Altaxo.Gui.Graph.Graph3D.Plot.Styles.DropLinePlotStyleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:axog="clr-namespace:Altaxo.Gui;assembly=AltaxoBase"
    xmlns:axogc="clr-namespace:Altaxo.Gui.Common"
    xmlns:axogcd="clr-namespace:Altaxo.Gui.Common.Drawing"
    xmlns:axogct="clr-namespace:Altaxo.Gui.Common.BasicTypes"
    xmlns:axogdd="clr-namespace:Altaxo.Gui.Drawing.DashPatternManagement"
    xmlns:axogddl="clr-namespace:Altaxo.Gui.Drawing.D3D.LineCaps"
    xmlns:axoggc="clr-namespace:Altaxo.Gui.Drawing.D3D"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="Label">
            <Style.Setters>
                <Setter Property="Margin" Value="6,0,0,0" />
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style.Setters>
        </Style>
        <Style TargetType="CheckBox">
            <Style.Setters>
                <Setter Property="Margin" Value="6,0,6,0" />
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style.Setters>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" SharedSizeGroup="LabelColumn1" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition
                Width="Auto"
                MinWidth="50"
                SharedSizeGroup="EditColumn1" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition
                Width="Auto"
                MinWidth="50"
                SharedSizeGroup="EditColumn2" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
        </Grid.RowDefinitions>

        <GroupBox
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Header="Drop targets:">
            <axogc:MultiChoiceCheckboxControl
                x:Name="_guiDropLines"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch" />
        </GroupBox>

        <GroupBox
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3">
            <GroupBox.Header>
                <CheckBox x:Name="_guiEnableUserDefinedDropTarget" Content="User defined drop target" />
            </GroupBox.Header>
            <Grid x:Name="_guiUserDefinedDropTargetGrid" IsEnabled="{Binding ElementName=_guiEnableUserDefinedDropTarget, Path=IsChecked}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="LabelColumn1" />
                    <ColumnDefinition Width="4" />
                    <ColumnDefinition
                        Width="Auto"
                        MinWidth="50"
                        SharedSizeGroup="EditColumn1" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="4" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="4" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="4" />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="Number of axis perpendicular to plane:" />
                <axogc:Int32UpDown
                    x:Name="_guiUserDefinedDropTargetAxis"
                    Grid.Row="0"
                    Grid.Column="2"
                    Maximum="2"
                    Minimum="0"
                    Value="2" />
                <CheckBox
                    x:Name="_guiUserDefinedUsePhysicalBaseValue"
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Content="Use physical base value" />
                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    Content="Base value (logical or physical):" />
                <axogc:NumericDoubleTextBox
                    x:Name="_guiUserDefinedBaseValue"
                    Grid.Row="4"
                    Grid.Column="2" />
            </Grid>
        </GroupBox>

        <CheckBox
            x:Name="_guiIndependentSkipFreq"
            Grid.Row="4"
            Grid.Column="0"
            Content="Indep. skip freq.:" />
        <axogc:Int32UpDown
            x:Name="_guiSkipFrequency"
            Grid.Row="4"
            Grid.Column="2"
            Minimum="1" />

        <CheckBox
            x:Name="_guiIndependentColor"
            Grid.Row="6"
            Grid.Column="0"
            Checked="EhIndependentColorChanged"
            Content="Indep. color:"
            Unchecked="EhIndependentColorChanged" />
        <axoggc:MaterialComboBox
            x:Name="_guiPenMaterial"
            Grid.Row="6"
            Grid.Column="2" />

        <Label
            Grid.Row="8"
            Grid.Column="0"
            Content="Style:" />
        <axogdd:DashPatternComboBox
            x:Name="_guiPenDashStyle"
            Grid.Row="8"
            Grid.Column="2" />

        <Label
            Grid.Row="10"
            Grid.Column="0"
            Content="CrossSection" />
        <ComboBox
            x:Name="_guiCrossSection"
            Grid.Row="10"
            Grid.Column="2" />

        <Label
            Grid.Row="12"
            Grid.Column="0"
            Content="Line start cap:" />
        <axogddl:LineCapComboBox
            x:Name="_cbLineStartCap"
            Grid.Row="12"
            Grid.Column="2"
            IsForEndCap="False" />
        <Label
            Grid.Row="10"
            Grid.Column="4"
            Content="Min. abs. size:" />
        <axogcd:LineCapSizeComboBox
            x:Name="_cbLineStartCapSize"
            Grid.Row="12"
            Grid.Column="4"
            ToolTip="Minimum absolute cap size" />
        <Label
            Grid.Row="10"
            Grid.Column="5"
            Content="Min. rel. size:" />
        <axogc:QuantityWithUnitTextBox
            x:Name="_edLineStartCapRelSize"
            Grid.Row="12"
            Grid.Column="5"
            Margin="4,0,0,0"
            ToolTip="Minimum cap size relative to pen width"
            UnitEnvironment="{x:Static axog:RelationEnvironment.Instance}" />

        <CheckBox
            x:Name="_guiIndependentSymbolSize"
            Grid.Row="14"
            Grid.Column="0"
            Content="Independent symbol size :" />
        <axogcd:LineCapSizeComboBox
            x:Name="_guiSymbolSize"
            Grid.Row="14"
            Grid.Column="2" />

        <Label
            Grid.Row="16"
            Grid.Column="0"
            Content="Line width 1 = " />
        <axogcd:LineThicknessComboBox
            x:Name="_guiLineWidth1Offset"
            Grid.Row="16"
            Grid.Column="2" />
        <Label
            Grid.Row="16"
            Grid.Column="3"
            Content="+" />
        <axogc:QuantityWithUnitTextBox
            x:Name="_guiLineWidth1Factor"
            Grid.Row="16"
            Grid.Column="4"
            UnitEnvironment="{x:Static axog:RelationEnvironment.Instance}" />
        <Label
            Grid.Row="16"
            Grid.Column="5"
            Content="* symbolSize" />

        <Label
            Grid.Row="18"
            Grid.Column="0"
            Content="Line width 2 = " />
        <axogcd:LineThicknessComboBox
            x:Name="_guiLineWidth2Offset"
            Grid.Row="18"
            Grid.Column="2" />
        <Label
            Grid.Row="18"
            Grid.Column="3"
            Content="+" />
        <axogc:QuantityWithUnitTextBox
            x:Name="_guiLineWidth2Factor"
            Grid.Row="18"
            Grid.Column="4"
            UnitEnvironment="{x:Static axog:RelationEnvironment.Instance}" />
        <Label
            Grid.Row="18"
            Grid.Column="5"
            Content="* symbolSize" />

        <Label
            Grid.Row="20"
            Grid.Column="0"
            Content="Line gap at start = " />
        <axogcd:LineThicknessComboBox
            x:Name="_guiGapAtStartOffset"
            Grid.Row="20"
            Grid.Column="2" />
        <Label
            Grid.Row="20"
            Grid.Column="3"
            Content="+" />
        <axogc:QuantityWithUnitTextBox
            x:Name="_guiGapAtStartFactor"
            Grid.Row="20"
            Grid.Column="4"
            UnitEnvironment="{x:Static axog:RelationEnvironment.Instance}" />
        <Label
            Grid.Row="20"
            Grid.Column="5"
            Content="* symbolSize" />

        <Label
            Grid.Row="22"
            Grid.Column="0"
            Content="Line gap at end = " />
        <axogcd:LineThicknessComboBox
            x:Name="_guiGapAtEndOffset"
            Grid.Row="22"
            Grid.Column="2" />
        <Label
            Grid.Row="22"
            Grid.Column="3"
            Content="+" />
        <axogc:QuantityWithUnitTextBox
            x:Name="_guiGapAtEndFactor"
            Grid.Row="22"
            Grid.Column="4"
            UnitEnvironment="{x:Static axog:RelationEnvironment.Instance}" />
        <Label
            Grid.Row="22"
            Grid.Column="5"
            Content="* symbolSize" />
    </Grid>
</UserControl>
