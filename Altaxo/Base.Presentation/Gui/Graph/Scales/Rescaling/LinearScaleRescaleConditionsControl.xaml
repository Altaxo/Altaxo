<UserControl
    x:Class="Altaxo.Gui.Graph.Scales.Rescaling.LinearScaleRescaleConditionsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:axogc="clr-namespace:Altaxo.Gui.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:rescaling="clr-namespace:Altaxo.Gui.Graph.Scales.Rescaling;assembly=AltaxoBase"
    d:DataContext="{d:DesignInstance Type=rescaling:LinearScaleRescaleConditionsController}"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="8" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="8" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Content="Org:" />
        <ComboBox
            Grid.Row="0"
            Grid.Column="2"
            ItemsSource="{Binding OrgRescaling.Items}"
            SelectedItem="{Binding OrgRescaling.SelectedItem, Mode=TwoWay}" >
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Text}" ToolTip="{Binding Description}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <axogc:NumericDoubleTextBox
            Grid.Row="0"
            Grid.Column="4"
            SelectedValue="{Binding OrgValue}" />
        <ComboBox
            Grid.Row="0"
            Grid.Column="6"
            ItemsSource="{Binding OrgRelativeTo.Items}"
            SelectedItem="{Binding OrgRelativeTo.SelectedItem, Mode=TwoWay}" />
        <Label
            Grid.Row="2"
            Grid.Column="0"
            Content="End:" />
        <ComboBox
            Grid.Row="2"
            Grid.Column="2"
            ItemsSource="{Binding EndRescaling.Items}"
            SelectedItem="{Binding EndRescaling.SelectedItem, Mode=TwoWay}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Text}" ToolTip="{Binding Description}" />
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <axogc:NumericDoubleTextBox
            Grid.Row="2"
            Grid.Column="4"
            SelectedValue="{Binding EndValue}" />
        <ComboBox
            Grid.Row="2"
            Grid.Column="6"
            ItemsSource="{Binding EndRelativeTo.Items}"
            SelectedItem="{Binding EndRelativeTo.SelectedItem, Mode=TwoWay}" />
    </Grid>
</UserControl>
