<UserControl
    x:Class="Altaxo.Gui.Graph.Scales.AxisLinkControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:axogc="clr-namespace:Altaxo.Gui.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <RadioButton
            x:Name="_guiLinkAxisStraight"
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Checked="EhLinkStraight_CheckedChanged">
            Straight (1:1)
        </RadioButton>
        <RadioButton
            x:Name="_guiLinkAxisCustom"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Checked="EhLinkCustom_CheckedChanged">
            Custom
        </RadioButton>
        <Label
            Grid.Row="3"
            Grid.Column="1"
            HorizontalAlignment="Center">
            a
        </Label>
        <Label
            Grid.Row="3"
            Grid.Column="3"
            HorizontalAlignment="Center">
            b
        </Label>
        <Label
            Grid.Row="4"
            Grid.Column="0"
            HorizontalAlignment="Center">
            Org
        </Label>
        <Label
            Grid.Row="6"
            Grid.Column="0"
            HorizontalAlignment="Center">
            End
        </Label>
        <axogc:NumericDoubleTextBox
            x:Name="_guiLinkAxisOrgA"
            Grid.Row="4"
            Grid.Column="1"
            AllowInfiniteValues="False"
            AllowNaNValues="False" />
        <axogc:NumericDoubleTextBox
            x:Name="_guiLinkAxisOrgB"
            Grid.Row="4"
            Grid.Column="3"
            AllowInfiniteValues="False"
            AllowNaNValues="False" />
        <axogc:NumericDoubleTextBox
            x:Name="_guiLinkAxisEndA"
            Grid.Row="6"
            Grid.Column="1"
            AllowInfiniteValues="False"
            AllowNaNValues="False" />
        <axogc:NumericDoubleTextBox
            x:Name="_guiLinkAxisEndB"
            Grid.Row="6"
            Grid.Column="3"
            AllowInfiniteValues="False"
            AllowNaNValues="False" />
    </Grid>
</UserControl>
