<UserControl x:Class="Altaxo.Gui.Graph.Gdi.HostLayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:gdi="clr-namespace:Altaxo.Gui.Graph.Gdi;assembly=AltaxoBase" d:DataContext="{d:DesignInstance Type=gdi:HostLayerController}"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="500">
	<Grid>
        <TabControl Grid.Column="0"  
                    ItemsSource="{Binding Tabs}"
                    SelectedValue="{Binding SelectedTab, Mode=TwoWay}" 
                    SelectedValuePath="Tag"
                    DisplayMemberPath="Text"
                    >
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ContentPresenter Content="{Binding ViewObject}"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</UserControl>
