<UserControl x:Class="Altaxo.Gui.Graph.Gdi.Plot.DensityImagePlotItemOptionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:plot="clr-namespace:Altaxo.Gui.Graph.Gdi.Plot;assembly=AltaxoBase"
             d:DataContext="{d:DesignInstance Type=plot:DensityImagePlotItemOptionController}"
             mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
		</Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Copy image to clipboard" Command="{Binding CmdCopyImageToClipboard}" />
		<Button Grid.Row="2" Content="Save image to disc" Command="{Binding CmdSaveImageToDisc}" />
	</Grid>
</UserControl>
