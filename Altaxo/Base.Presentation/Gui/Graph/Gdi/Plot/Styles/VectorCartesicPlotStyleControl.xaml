<UserControl x:Class="Altaxo.Gui.Graph.Gdi.Plot.Styles.VectorCartesicPlotStyleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  		     xmlns:axogc="clr-namespace:Altaxo.Gui.Common"
			 xmlns:axogcc="clr-namespace:Altaxo.Gui.Common.Converters"
			 xmlns:axogcd="clr-namespace:Altaxo.Gui.Common.Drawing"
             xmlns:styles="clr-namespace:Altaxo.Gui.Graph.Gdi.Plot.Styles;assembly=AltaxoBase"
             d:DataContext="{d:DesignInstance Type=styles:VectorCartesicPlotStyleController}"
             mc:Ignorable="d"
			 Grid.IsSharedSizeScope="True">
	<UserControl.Resources>
		<Style TargetType="Button">
			<Style.Setters>
				<Setter Property="Margin" Value="8,0,8,0" />
			</Style.Setters>
		</Style>
		<Style TargetType="CheckBox">
			<Style.Setters>
				<Setter Property="VerticalAlignment" Value="Center" />
				<Setter Property="Margin" Value="4,0,8,0" />
			</Style.Setters>
		</Style>
		<Style TargetType="Label">
			<Style.Setters>
				<Setter Property="Margin" Value="8,0,8,0" />
				<Setter Property="HorizontalAlignment" Value="Right" />
			</Style.Setters>
		</Style>
	</UserControl.Resources>
	<StackPanel>
		<GroupBox Header="Data : ">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" SharedSizeGroup="LabelColumn1" />
					<ColumnDefinition Width="4" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
				</Grid.RowDefinitions>

				<Label Content="Column for x-component : " Grid.Row="0" Grid.Column="0" />
                <TextBox Grid.Row="0" Grid.Column="2" Text="{Binding XColumnTransformationText}" ToolTip="{Binding XColumnTransformationToolTip}"  IsEnabled="True" IsReadOnly="True"  Visibility="{Binding XColumnTransformationText, Converter={x:Static axogcc:NullToVisibilityCollapsedConverter.Instance}}" />
                <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding XColumnText}" ToolTip="{Binding XColumnToolTip}" Background="{Binding XColumnStatus, Converter={x:Static axogcc:PlotDataSeverityToBackground.Instance}}" IsEnabled="True" IsReadOnly="True" MinWidth="100"  />

                <Label Content="Column for y-component : " Grid.Row="2" Grid.Column="0" />
                <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding YColumnTransformationText}" ToolTip="{Binding YColumnTransformationToolTip}"  IsEnabled="True" IsReadOnly="True"  Visibility="{Binding YColumnTransformationText, Converter={x:Static axogcc:NullToVisibilityCollapsedConverter.Instance}}" />
                <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding YColumnText}" ToolTip="{Binding YColumnToolTip}" Background="{Binding YColumnStatus, Converter={x:Static axogcc:PlotDataSeverityToBackground.Instance}}" IsEnabled="True" IsReadOnly="True" MinWidth="100"  />

				<GroupBox Header="Value interpretation :" Margin="4,4,0,0" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="4">
                    <axogc:SingleChoiceRadioWrapPanel ItemsSource="{Binding MeaningOfValues.Items}" SelectedItem="{Binding MeaningOfValues.SelectedItem}"  />
				</GroupBox>

                <CheckBox Grid.Row="8" Grid.Column="0" IsChecked="{Binding IndependentSkipFrequency, Mode=TwoWay}" Content="Independent skip frequency :" />
                <axogc:Int32UpDown Grid.Row="8" Grid.Column="2" Grid.ColumnSpan="2" Value="{Binding SkipFrequency}" Minimum="1" />

                <CheckBox Grid.Row="10" Grid.Column="0" Grid.ColumnSpan="4" IsChecked="{Binding IgnoreMissingDataPoints, Mode=TwoWay}" Content="Ignore missing data points" ToolTip="If true, missing data points are treated as if not present." />

                <CheckBox Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="4" IsChecked="{Binding IndependentOnShiftingGroupStyles, Mode=TwoWay}" Content="Independent on data shifting group styles"  />
			</Grid>
		</GroupBox>

		<GroupBox Header="Style : ">
			<Grid Margin="0,4,0,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" SharedSizeGroup="LabelColumn1" />
					<ColumnDefinition Width="4" />
					<ColumnDefinition Width="*" SharedSizeGroup="EditColumn1" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="*" MinWidth="40" SharedSizeGroup="EditColumn2" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
				</Grid.RowDefinitions>
                <CheckBox Grid.Row="0" Grid.Column="0" IsChecked="{Binding IndependentColor, Mode=TwoWay}" Content="Independent color :" />
                <axogcd:BrushComboBox Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="4" SelectedBrush="{Binding Pen.Brush}" ShowPlotColorsOnly="{Binding Pen.ShowPlotColorsOnly}"/>

                <CheckBox Grid.Row="2" Grid.Column="0" IsChecked="{Binding IndependentSymbolSize, Mode=TwoWay}" Content="Independent symbol size :" />
                <axogcd:LineCapSizeComboBox Grid.Row="2" Grid.Column="2" SelectedQuantity="{Binding SymbolSize}" UnitEnvironment="{Binding SymbolSizeEnvironment}" />

				<Label Grid.Row="4" Grid.Column="0" Content="Line width 1 = " />
                <axogcd:LineThicknessComboBox Grid.Row="4" Grid.Column="2" SelectedQuantity="{Binding LineWidth1Offset}" UnitEnvironment="{Binding LineWidthEnvironment}"  />
				<Label Content="+" Grid.Row="4" Grid.Column="3" />
                <axogc:QuantityWithUnitTextBox Grid.Row="4" Grid.Column="4" SelectedQuantity="{Binding LineWidth1Factor}" UnitEnvironment="{Binding LineFactorEnvironment}" />
				<Label Content="* symbolSize" Grid.Row="4" Grid.Column="5" />

				<Label Content="End cap:" Grid.Row="8" Grid.Column="0" />
                <axogcd:LineCapComboBox Grid.Row="8" Grid.Column="2" Grid.ColumnSpan="4" SelectedLineCap="{Binding Pen.EndCap}" />

				<Label Content="End cap size = " Grid.Row="10" Grid.Column="0" />
                <axogcd:LineThicknessComboBox Grid.Row="10" Grid.Column="2" SelectedQuantity="{Binding EndCapSizeOffset}" UnitEnvironment="{Binding LineWidthEnvironment}" />
				<Label Content="+" Grid.Row="10" Grid.Column="3" />
                <axogc:QuantityWithUnitTextBox  Grid.Row="10" Grid.Column="4"  SelectedQuantity="{Binding EndCapSizeFactor}"  UnitEnvironment="{Binding LineFactorEnvironment}" />
				<Label Content="* symbolSize" Grid.Row="10" Grid.Column="5" />

                <CheckBox Grid.Row="12" Grid.Column="0" IsChecked="{Binding UseSymbolGap, Mode=TwoWay}" Content="Use line-symbol gap = " />
                <axogcd:LineThicknessComboBox Grid.Row="12" Grid.Column="2" SelectedQuantity="{Binding SymbolGapOffset}" UnitEnvironment="{Binding LineWidthEnvironment}"  />
				<Label Content="+" Grid.Row="12" Grid.Column="3" />
                <axogc:QuantityWithUnitTextBox Grid.Row="12" Grid.Column="4"  SelectedQuantity="{Binding SymbolGapFactor}" UnitEnvironment="{Binding LineFactorEnvironment}"  />
				<Label Content="* symbolSize" Grid.Row="12" Grid.Column="5" />

				<CheckBox Grid.Row="14" Grid.Column="0" Content="Use manual vector length = " IsChecked="{Binding UseManualVectorLength, Mode=TwoWay}" />
                <axogcd:LineThicknessComboBox Grid.Row="14" Grid.Column="2" SelectedQuantity="{Binding ManualVectorLengthOffset}" UnitEnvironment="{Binding LineWidthEnvironment}" />
				<Label Content="+" Grid.Row="14" Grid.Column="3" />
                <axogc:QuantityWithUnitTextBox Grid.Row="14" Grid.Column="4"  SelectedQuantity="{Binding ManualVectorLengthFactor}" UnitEnvironment="{Binding LineFactorEnvironment}"  />
				<Label Content="* symbolSize" Grid.Row="14" Grid.Column="5" />
			</Grid>
		</GroupBox>
	</StackPanel>
</UserControl>
