<UserControl
    x:Class="Altaxo.Gui.Graph.Gdi.Plot.Styles.DropLinePlotStyleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:axog="clr-namespace:Altaxo.Gui;assembly=AltaxoBase"
    xmlns:axogc="clr-namespace:Altaxo.Gui.Common"
    xmlns:axogcd="clr-namespace:Altaxo.Gui.Common.Drawing"
    xmlns:axogct="clr-namespace:Altaxo.Gui.Common.BasicTypes"
    xmlns:axogdd="clr-namespace:Altaxo.Gui.Drawing.DashPatternManagement"
    xmlns:axogddl="clr-namespace:Altaxo.Gui.Drawing.D3D.LineCaps"
    xmlns:axoggc="clr-namespace:Altaxo.Gui.Drawing.D3D"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:styles="clr-namespace:Altaxo.Gui.Graph.Gdi.Plot.Styles;assembly=AltaxoBase" d:DataContext="{d:DesignInstance Type=styles:DropLinePlotStyleController}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style TargetType="Label">
            <Style.Setters>
                <Setter Property="Margin" Value="6,0,0,0" />
                <Setter Property="HorizontalAlignment" Value="Right" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style.Setters>
        </Style>
        <Style TargetType="CheckBox">
            <Style.Setters>
                <Setter Property="Margin" Value="6,0,6,0" />
                <Setter Property="HorizontalAlignment" Value="Left" />
                <Setter Property="VerticalAlignment" Value="Center" />
            </Style.Setters>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" SharedSizeGroup="LabelColumn1" />
            <ColumnDefinition Width="4" />
            <ColumnDefinition
                Width="Auto"
                MinWidth="50"
                SharedSizeGroup="EditColumn1" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition
                Width="Auto"
                MinWidth="50"
                SharedSizeGroup="EditColumn2" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4" />
        </Grid.RowDefinitions>

        <CheckBox
           IsChecked="{Binding IndependentSkipFrequency, Mode=TwoWay}"
            Grid.Row="0"
            Grid.Column="0"
            Content="Independent skip frequency:" />
        <axogc:Int32UpDown
            Value="{Binding SkipFrequency}"
            Grid.Row="0"
            Grid.Column="2"
            Minimum="1" />

        <CheckBox
            IsChecked="{Binding IgnoreMissingDataPoints, Mode=TwoWay}"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Content="Ignore missing data points"
            ToolTip="If true, missing data points are treated as if not present." />

        <CheckBox
            IsChecked="{Binding IndependentOnShiftingGroupStyles, Mode=TwoWay}"
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Content="Independent on data shifting group styles" />

        <GroupBox
            Grid.Row="6"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Header="Drop targets:">
            <axogc:MultiChoiceCheckboxControl
                DataContext="{Binding DropLineChoices}"
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch" />
        </GroupBox>

        <GroupBox
            Grid.Row="8"
            Grid.Column="0"
            Grid.ColumnSpan="3">
            <GroupBox.Header>
                <CheckBox IsChecked="{Binding EnableUserDefinedDropTarget, Mode=TwoWay}" Content="User defined drop target" />
            </GroupBox.Header>
            <Grid x:Name="_guiUserDefinedDropTargetGrid" IsEnabled="{Binding EnableUserDefinedDropTarget}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="LabelColumn1" />
                    <ColumnDefinition Width="4" />
                    <ColumnDefinition
                        Width="Auto"
                        MinWidth="50"
                        SharedSizeGroup="EditColumn1" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="4" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="4" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="4" />
                </Grid.RowDefinitions>
                <Label
                    Grid.Row="0"
                    Grid.Column="0"
                    Content="Number of axis perpendicular to plane:" />
                <axogc:Int32UpDown
                    Value="{Binding UserDefinedDropTargetAxis}"
                    Grid.Row="0"
                    Grid.Column="2"
                    Maximum="2"
                    Minimum="0"
                    />
                <CheckBox
                   IsChecked="{Binding UserDefinedPhysicalBaseValue, Mode=TwoWay}"
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    Content="Use physical base value" />
                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    Content="Base value (logical or physical):" />
                <axogc:NumericDoubleTextBox
                    SelectedValue="{Binding UserDefinedBaseValue}"
                    Grid.Row="4"
                    Grid.Column="2" />
            </Grid>
        </GroupBox>

        <CheckBox
            IsChecked="{Binding IndependentColor, Mode=TwoWay}"
            Grid.Row="10"
            Grid.Column="0"
            Content="Indep. color:"
            />
        <axogcd:BrushComboBox
            SelectedBrush="{Binding Pen.Brush}"
            Grid.Row="10"
            Grid.Column="2" />

        <Label
            Grid.Row="12"
            Grid.Column="0"
            Content="Style:" />
        <axogdd:DashPatternComboBox
            SelectedItem="{Binding Pen.DashPattern}"
            Grid.Row="12"
            Grid.Column="2" />

        <Label
            Grid.Row="12"
            Grid.Column="4"
            Content="Min. abs. size:" />
        <Label
            Grid.Row="12"
            Grid.Column="5"
            Content="Min. rel. size:" />

        <Label
            Grid.Row="14"
            Grid.Column="0"
            Content="Line start cap:" />
        <axogcd:LineCapComboBox
            SelectedLineCap="{Binding Pen.StartCap.LineCap}"
            Grid.Row="14"
            Grid.Column="2"
            IsForEndCap="False" />
        <axogcd:LineCapSizeComboBox
            SelectedQuantity="{Binding Pen.StartCap.MinimumAbsoluteSize}" UnitEnvironment="{Binding Pen.StartCap.MinimumAbsoluteSizeEnvironment}"
            Grid.Row="14"
            Grid.Column="4"
            ToolTip="Minimum absolute cap size" />
        <axogc:QuantityWithUnitTextBox
            SelectedQuantity="{Binding Pen.StartCap.MinimumRelativeSize}" UnitEnvironment="{Binding Pen.StartCap.MinimumRelativeSizeEnvironment}"
            Grid.Row="14"
            Grid.Column="5"
            Margin="4,0,0,0"
            ToolTip="Minimum cap size relative to pen width"
            />

        <Label
            Grid.Row="16"
            Grid.Column="0"
            Content="Line end cap:" />
        <axogcd:LineCapComboBox
            SelectedLineCap="{Binding Pen.EndCap.LineCap}"
            Grid.Row="16"
            Grid.Column="2"
            IsForEndCap="False" />
        <axogcd:LineCapSizeComboBox
            SelectedQuantity="{Binding Pen.EndCap.MinimumAbsoluteSize}" UnitEnvironment="{Binding Pen.EndCap.MinimumAbsoluteSizeEnvironment}"
            Grid.Row="16"
            Grid.Column="4"
            ToolTip="Minimum absolute cap size" />
        <axogc:QuantityWithUnitTextBox
            SelectedQuantity="{Binding Pen.EndCap.MinimumRelativeSize}" UnitEnvironment="{Binding Pen.EndCap.MinimumRelativeSizeEnvironment}"
            Grid.Row="16"
            Grid.Column="5"
            Margin="4,0,0,0"
            ToolTip="Minimum cap size relative to pen width"
             />

        <CheckBox
            IsChecked="{Binding IndependentSymbolSize, Mode=TwoWay}"
            Grid.Row="18"
            Grid.Column="0"
            Content="Independent symbol size :" />
        <axogcd:LineCapSizeComboBox
            SelectedQuantity="{Binding SymbolSize}" UnitEnvironment="{Binding SymbolSizeEnvironment}"
            Grid.Row="18"
            Grid.Column="2" />

        <Label
            Grid.Row="20"
            Grid.Column="0"
            Content="Line width 1 = " />
        <axogcd:LineThicknessComboBox
            SelectedQuantity="{Binding LineWidth1Offset}" UnitEnvironment="{Binding LineWidthEnvironment}"
            Grid.Row="20"
            Grid.Column="2" />
        <Label
            Grid.Row="20"
            Grid.Column="3"
            Content="+" />
        <axogc:QuantityWithUnitTextBox
            SelectedQuantity="{Binding LineWidth1Factor}" UnitEnvironment="{Binding LineFactorEnvironment}"
            Grid.Row="20"
            Grid.Column="4"/>
        <Label
            Grid.Row="20"
            Grid.Column="5"
            Content="* symbolSize" />

        <Label
            Grid.Row="22"
            Grid.Column="0"
            Content="Line gap at start = " />
            <axogcd:LineThicknessComboBox
            SelectedQuantity="{Binding GapAtStartOffset}" UnitEnvironment="{Binding LineWidthEnvironment}"
            Grid.Row="22"
            Grid.Column="2" />
        <Label
            Grid.Row="22"
            Grid.Column="3"
            Content="+" />
        <axogc:QuantityWithUnitTextBox
            SelectedQuantity="{Binding GapAtStartFactor}" UnitEnvironment="{Binding LineFactorEnvironment}"
            Grid.Row="22"
            Grid.Column="4"
            />
        <Label
            Grid.Row="22"
            Grid.Column="5"
            Content="* symbolSize" />

        <Label
            Grid.Row="24"
            Grid.Column="0"
            Content="Line gap at end = " />
        <axogcd:LineThicknessComboBox
            SelectedQuantity="{Binding GapAtEndOffset}" UnitEnvironment="{Binding LineWidthEnvironment}"
            Grid.Row="24"
            Grid.Column="2" />
        <Label
            Grid.Row="24"
            Grid.Column="3"
            Content="+" />
        <axogc:QuantityWithUnitTextBox
            SelectedQuantity="{Binding GapAtStartFactor}" UnitEnvironment="{Binding LineFactorEnvironment}"
            Grid.Row="24"
            Grid.Column="4"
            />
        <Label
            Grid.Row="24"
            Grid.Column="5"
            Content="* symbolSize" />
    </Grid>
</UserControl>
