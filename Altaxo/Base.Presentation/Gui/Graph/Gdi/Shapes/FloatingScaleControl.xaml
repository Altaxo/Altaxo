<UserControl
    x:Class="Altaxo.Gui.Graph.Gdi.Shapes.FloatingScaleControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:axog="clr-namespace:Altaxo.Gui;assembly=AltaxoBase"
    xmlns:axogc="clr-namespace:Altaxo.Gui.Common"
    xmlns:axogcd="clr-namespace:Altaxo.Gui.Common.Drawing"
    xmlns:axogg="clr-namespace:Altaxo.Gui.Graph"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Altaxo.Gui.Common.Drawing"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <TabControl>
        <TabItem Header="Position/Size">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition MinWidth="90" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition MinWidth="90" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="4" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="4" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="4" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="4" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0">Pos.X:</Label>
                <axogc:QuantityWithUnitTextBox
                    x:Name="_edPositionX"
                    Grid.Row="0"
                    Grid.Column="1"
                    UnitEnvironment="{x:Static axog:PositionEnvironment.Instance}" />

                <Label Grid.Row="0" Grid.Column="2">Pos.Y:</Label>
                <axogc:QuantityWithUnitTextBox
                    x:Name="_edPositionY"
                    Grid.Row="0"
                    Grid.Column="3"
                    UnitEnvironment="{x:Static axog:PositionEnvironment.Instance}" />

                <GroupBox
                    Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Header="Scale to measure:">
                    <StackPanel Orientation="Vertical">
                        <RadioButton x:Name="_guiScale0" Content="X-scale" />
                        <RadioButton x:Name="_guiScale1" Content="Y-scale" />
                    </StackPanel>
                </GroupBox>

                <GroupBox
                    Grid.Row="6"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Header="ScaleSpan">
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <RadioButton
                            x:Name="_guiIsLogicalValue"
                            Grid.Column="0"
                            Margin="0,4,0,0"
                            Content="is logical value:" />
                        <axogc:QuantityWithUnitTextBox
                            x:Name="_guiLogicalScaleSpan"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="0,4,0,0"
                            IsEnabled="{Binding ElementName=_guiIsLogicalValue, Path=IsChecked}"
                            SelectedQuantityAsValueInSIUnits="0.5"
                            UnitEnvironment="{x:Static axog:RelationEnvironment.Instance}" />
                        <RadioButton
                            x:Name="_guiIsPhysicalEndOrgDifference"
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,4,0,0"
                            Content="is physical end-org difference:" />
                        <axogc:NumericDoubleTextBox
                            x:Name="_guiSpanDifferenceValue"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,4,0,0"
                            IsEnabled="{Binding ElementName=_guiIsPhysicalEndOrgDifference, Path=IsChecked}"
                            SelectedValue="1" />
                        <RadioButton
                            x:Name="_guiIsPhysicalEndOrgRatio"
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,4,0,0"
                            Content="is physical end/org ratio:" />
                        <axogc:NumericDoubleTextBox
                            x:Name="_guiSpanRatioValue"
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="0,4,0,0"
                            IsEnabled="{Binding ElementName=_guiIsPhysicalEndOrgRatio, Path=IsChecked}"
                            SelectedValue="2" />
                    </Grid>
                </GroupBox>
            </Grid>
        </TabItem>
        <TabItem x:Name="_guiTabScaleTicks" Header="Scale/Ticks">
            <StackPanel Orientation="Vertical">
                <GroupBox Padding="4" Header="Scale:">
                    <StackPanel Orientation="Vertical">
                        <RadioButton
                            x:Name="_guiScaleTypeNormal"
                            Content="As parent scale"
                            ToolTip="Can be used to measure the difference of scale end and org, in combination with SpanTickSpacing" />
                        <RadioButton
                            x:Name="_guiScaleTypeDifference"
                            Content="Difference to org (org is set to 0)"
                            ToolTip="Can be used for a ruler that starts with zero, in combination with linear tick spacing" />
                        <RadioButton
                            x:Name="_guiScaleTypeRatio"
                            Content="Ratio to org (org is set to 1)"
                            ToolTip="Can be used for a ruler on a logarithmic scale, along with logarithmic tick spacing" />
                    </StackPanel>
                </GroupBox>
                <GroupBox
                    x:Name="_guiTickSpacingGroupBox"
                    Margin="0,4,0,0"
                    Padding="4">
                    <GroupBox.Header>
                        <StackPanel Orientation="Horizontal">
                            <Label
                                Grid.Row="6"
                                Grid.Column="0"
                                Content="Tick spacing:" />
                            <ComboBox
                                x:Name="_guiTickSpacingTypes"
                                Grid.Row="6"
                                Grid.Column="1"
                                SelectionChanged="EhTickSpacingType_SelectionChange" />
                        </StackPanel>
                    </GroupBox.Header>
                </GroupBox>
            </StackPanel>
        </TabItem>
        <TabItem x:Name="_guiTabTitleFormat" Header="Title/Format" />
        <TabItem x:Name="_guiTabMajorLabels" Header="MajorLabels" />
        <TabItem x:Name="_guiTabMinorLabels" Header="MinorLabels" />
        <TabItem x:Name="_guiBackground" Header="Background">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Label Content="Style:" />
                <ComboBox
                    x:Name="_guiBackgroundStyle"
                    Grid.Row="0"
                    Grid.Column="1" />
                <Label
                    Grid.Row="1"
                    Grid.Column="0"
                    Content="Brush:" />
                <axogcd:BrushComboBox
                    x:Name="_guiBackgroundBrush"
                    Grid.Row="1"
                    Grid.Column="1" />

                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    Content="Left margin:" />
                <axogc:QuantityWithUnitTextBox
                    x:Name="_guiMarginLeft"
                    Grid.Row="2"
                    Grid.Column="1"
                    UnitEnvironment="{x:Static axog:SizeEnvironment.Instance}" />

                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    Content="Top margin:" />
                <axogc:QuantityWithUnitTextBox
                    x:Name="_guiMarginTop"
                    Grid.Row="3"
                    Grid.Column="1"
                    UnitEnvironment="{x:Static axog:SizeEnvironment.Instance}" />

                <Label
                    Grid.Row="4"
                    Grid.Column="0"
                    Content="Right margin:" />
                <axogc:QuantityWithUnitTextBox
                    x:Name="_guiMarginRight"
                    Grid.Row="4"
                    Grid.Column="1"
                    UnitEnvironment="{x:Static axog:SizeEnvironment.Instance}" />

                <Label
                    Grid.Row="5"
                    Grid.Column="0"
                    Content="Bottom margin:" />
                <axogc:QuantityWithUnitTextBox
                    x:Name="_guiMarginBottom"
                    Grid.Row="5"
                    Grid.Column="1"
                    UnitEnvironment="{x:Static axog:SizeEnvironment.Instance}" />
            </Grid>
        </TabItem>
    </TabControl>
</UserControl>
