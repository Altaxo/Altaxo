<UserControl x:Class="Altaxo.Gui.Graph.Gdi.ArrangeLayersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
						 xmlns:axogc="clr-namespace:Altaxo.Gui.Common" xmlns:gdi="clr-namespace:Altaxo.Gui.Graph.Gdi;assembly=AltaxoBase" d:DataContext="{d:DesignInstance Type=gdi:ArrangeLayersController}"
             mc:Ignorable="d">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Label Grid.Row="0" Grid.Column="0" Content="Number of rows:" />
		<Label Grid.Row="2" Grid.Column="0" Content="Number of columns:" />
		<Label Grid.Row="4" Grid.Column="0" Content="Row spacing (%):" />
		<Label Grid.Row="6" Grid.Column="0" Content="Column spacing (%):" />
		<Label Grid.Row="8" Grid.Column="0" Content="Top margin (%):" />
		<Label Grid.Row="10" Grid.Column="0" Content="Left margin (%):" />
		<Label Grid.Row="12" Grid.Column="0" Content="Bottom margin (%):" />
		<Label Grid.Row="14" Grid.Column="0" Content="Right margin (%):" />
		<Label Grid.Row="16" Grid.Column="0" Content="Superfluous layers:" />

		<axogc:Int32UpDown Grid.Row="0" Grid.Column="1" Minimum="1" Value="{Binding NumberOfRows, Mode=TwoWay}" />
		<axogc:Int32UpDown Grid.Row="2" Grid.Column="1" Minimum="1" Value="{Binding NumberOfColumns, Mode=TwoWay}" />
		<axogc:NumericDoubleTextBox Grid.Row="4" Grid.Column="1" SelectedValue="{Binding RowSpacing, Mode=TwoWay}" />
        <axogc:NumericDoubleTextBox Grid.Row="6" Grid.Column="1" SelectedValue="{Binding ColumnSpacing, Mode=TwoWay}" />
        <axogc:NumericDoubleTextBox Grid.Row="8" Grid.Column="1" SelectedValue="{Binding TopMargin, Mode=TwoWay}" />
        <axogc:NumericDoubleTextBox Grid.Row="10" Grid.Column="1" SelectedValue="{Binding LeftMargin, Mode=TwoWay}" />
        <axogc:NumericDoubleTextBox Grid.Row="12" Grid.Column="1" SelectedValue="{Binding BottomMargin, Mode=TwoWay}" />
        <axogc:NumericDoubleTextBox Grid.Row="14" Grid.Column="1" SelectedValue="{Binding RightMargin, Mode=TwoWay}" />
        <ComboBox Grid.Row="16" Grid.Column="1" SelectedValue="{Binding SelectedSuperfluousLayersAction, Mode=TwoWay}" ItemsSource="{Binding SuperfluousLayers}" SelectedValuePath="Tag" />
	</Grid>
</UserControl>
