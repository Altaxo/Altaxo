<UserControl x:Class="Altaxo.Gui.Graph.LineGraphicControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
						 xmlns:axogg="clr-namespace:Altaxo.Gui.Graph"
						 xmlns:axogcd="clr-namespace:Altaxo.Gui.Common.Drawing"
             mc:Ignorable="d" 
             >
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<GroupBox Grid.Row="0" Header="Appearance">
			<axogcd:PenAllPropertiesControl x:Name="_penControl"/>
		</GroupBox>
		<GroupBox Grid.Row="1" Header="Positioning">
			<axogg:PositionSizeRotationScaleControl x:Name="_positioningControl"/>
		</GroupBox>
	</Grid>
</UserControl>
