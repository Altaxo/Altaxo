<UserControl x:Class="Altaxo.Gui.Graph.XYPlotLabelStyleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
              xmlns:axogc="clr-namespace:Altaxo.Gui.Common"
						 xmlns:axogcd="clr-namespace:Altaxo.Gui.Common.Drawing"
             mc:Ignorable="d">
	<UserControl.Resources>
		<Style TargetType="Label">
			<Style.Setters>
				<Setter Property="Margin" Value="6,0,0,0" />
				<Setter Property="HorizontalAlignment" Value="Right" />
				<Setter Property="VerticalAlignment" Value="Center" />
			</Style.Setters>
		</Style>
		<Style TargetType="CheckBox">
			<Style.Setters>
				<Setter Property="Margin" Value="6,0,6,0" />
				<Setter Property="HorizontalAlignment" Value="Right" />
				<Setter Property="VerticalAlignment" Value="Center" />
			</Style.Setters>
		</Style>
	</UserControl.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="20" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="4" />
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Label Grid.Column="0" Grid.Row="0" Content="Label column:" />
		<TextBox x:Name="_guiLabelColumn" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="0" Margin="0,0,8,0" IsEnabled="False" />
		<Button Grid.Column="3" Grid.Row="0" Content="Select.." Click="EhSelectLabelColumn_Click" />
		<CheckBox x:Name="_guiIndependentLabelColor" Grid.Column="0" Grid.Row="2" Content="Indep. color:" Checked="EhIndependentColor_CheckChanged" Unchecked="EhIndependentColor_CheckChanged" />
		<axogcd:BrushComboBox x:Name="_guiLabelBrush" Grid.Column="1" Grid.Row="2" SelectedBrushChanged="EhLabelBrushChanged" />

		<Label Grid.Column="0" Grid.Row="4" Content="Font:" />
		<axogcd:FontFamilyComboBox x:Name="_cbFontFamily" Grid.Column="1" Grid.Row="4" />
		<Label Grid.Column="2" Grid.Row="4" Content="Style:" />
		<axogcd:FontStyleComboBox x:Name="_cbFontStyle" Grid.Column="3" Grid.Row="4" />

		<Label Grid.Column="0" Grid.Row="6" Content="Font size:" />
		<axogcd:FontSizeComboBox x:Name="_cbFontSize" Grid.Column="1" Grid.Row="6" />
		<Label Grid.Column="2" Grid.Row="6" Content="Rotation:" />
		<axogcd:RotationComboBox x:Name="_guiRotation" Grid.Column="3" Grid.Row="6" />

		<GroupBox Grid.Column="2" Grid.Row="8" Grid.ColumnSpan="2" Grid.RowSpan="5" Header="Offset (%):" Margin="4,8,0,0" />

		<Label Grid.Column="0" Grid.Row="10" Content="Horz. alignment:" />
		<ComboBox x:Name="_guiHorizontalAlignment" Grid.Column="1" Grid.Row="10" SelectionChanged="EhHorizontalAlignementChanged" />
		<Label Grid.Column="2" Grid.Row="10" Content="X:" />
		<axogc:QuantityWithUnitTextBox x:Name="_guiXOffset" Grid.Column="3" Grid.Row="10" />

		<Label Grid.Column="0" Grid.Row="12" Content="Vert. alignment:" />
		<ComboBox x:Name="_guiVerticalAlignment" Grid.Column="1" Grid.Row="12" SelectionChanged="EhVerticalAlignementChanged" />
		<Label Grid.Column="2" Grid.Row="12" Content="Y:" />
		<axogc:QuantityWithUnitTextBox x:Name="_guiYOffset" Grid.Column="3" Grid.Row="12" />

		<CheckBox x:Name="_guiAttachToAxis" Grid.Column="0" Grid.Row="14" Content="Attach to axis:" Checked="EhAttachToAxis_CheckedChanged" Unchecked="EhAttachToAxis_CheckedChanged" />
		<ComboBox x:Name="_guiAttachedAxis" Grid.Column="1" Grid.Row="14" SelectionChanged="EhAttachedAxisChanged" />

		<Label Grid.Column="0" Grid.Row="16" Content="Background:" />
		<ComboBox x:Name="_cbBackgroundStyle" Grid.Column="1" Grid.Row="16" />
		<Label Grid.Column="2" Grid.Row="16" Content="Brush:" />
		<axogcd:BrushComboBox x:Name="_cbBackgroundBrush" Grid.Column="3" Grid.Row="16" />
		<StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="18" Margin="0,0,4,0" VerticalAlignment="Center" HorizontalAlignment="Right">
			<TextBlock Text="Background" />
			<TextBlock Text="color linkage:" />
		</StackPanel>
		<axogc:SingleChoiceRadioStackPanel x:Name="_guiBackgroundColorLinkage" Grid.Column="1" Grid.Row="18" SelectionChanged="EhBackgroundColorLinkageChanged" />
	</Grid>
</UserControl>