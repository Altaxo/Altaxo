<UserControl x:Class="Altaxo.Gui.Graph.ErrorBarPlotStyleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
						  xmlns:axogc="clr-namespace:Altaxo.Gui.Common"
						 xmlns:axogcd="clr-namespace:Altaxo.Gui.Common.Drawing"
						 xmlns:axogg="clr-namespace:Altaxo.Gui.Graph"
             mc:Ignorable="d"
						 Grid.IsSharedSizeScope="True">
	<UserControl.Resources>
		<Style TargetType="Button">
			<Style.Setters>
				<Setter Property="Margin" Value="8,0,8,0" />
			</Style.Setters>
		</Style>
		<Style TargetType="CheckBox">
			<Style.Setters>
				<Setter Property="VerticalAlignment" Value="Center" />
				<Setter Property="Margin" Value="4,0,8,0" />
			</Style.Setters>
		</Style>
		<Style TargetType="Label">
			<Style.Setters>
				<Setter Property="Margin" Value="8,0,8,0" />
				<Setter Property="HorizontalAlignment" Value="Right" />
			</Style.Setters>
		</Style>
	</UserControl.Resources>
	<StackPanel>
		<GroupBox Header="Data:">
			<Grid Margin="0,4,0,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" SharedSizeGroup="LabelColumn1" />
					<ColumnDefinition Width="*" SharedSizeGroup="EditColumn1" />
					<ColumnDefinition Width="Auto" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
				</Grid.RowDefinitions>
				<Label Grid.Column="0" Grid.Row="0" Content="Error column:" />
				<TextBox x:Name="_edErrorColumn" Grid.Column="1" Grid.Row="0" IsEnabled="False" />
				<Button Grid.Column="2" Grid.Row="0" Content="Select.." Click="_btSelectErrorColumn_Click" />
				<Button Grid.Column="3" Grid.Row="0" Content="Clear!" Click="_btClearPosError_Click" />
				<CheckBox x:Name="_chkIndepNegErrorColumn" Grid.Column="0" Grid.Row="2" Content="Indep. neg. error col.:" Checked="_chkIndepNegErrorColumn_CheckedChanged" Unchecked="_chkIndepNegErrorColumn_CheckedChanged" />
				<TextBox x:Name="_edNegErrorColumn" Grid.Column="1" Grid.Row="2" IsEnabled="False" />
				<Button x:Name="_btSelectNegErrorColumn" Grid.Column="2" Grid.Row="2" Content="Select.." Click="_btSelectNegErrorColumn_Click" />
				<Button Grid.Column="3" Grid.Row="2" Content="Clear!" Click="btClearNegError_Click" />
			</Grid>
		</GroupBox>
		<GroupBox Header="Style:">
			<Grid Margin="0,4,0,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto" SharedSizeGroup="LabelColumn1" />
					<ColumnDefinition Width="*" SharedSizeGroup="EditColumn1" />
					<ColumnDefinition Width="Auto" />
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
					<RowDefinition Height="Auto" />
					<RowDefinition Height="4" />
				</Grid.RowDefinitions>
				<CheckBox x:Name="_chkIndependentColor" Grid.Column="0" Grid.Row="0" Content="Indep. color:" Checked="EhIndependentColorChanged" Unchecked="EhIndependentColorChanged" />
				<axogcd:BrushComboBox x:Name="_cbPenColor" Grid.Column="1" Grid.Row="0" />
				<axogcd:LineThicknessComboBox x:Name="_cbThickness" Grid.Column="1" Grid.Row="2" />
				<axogcd:DashStyleComboBox x:Name="_cbDashStyle" Grid.Column="1" Grid.Row="4" />
				<CheckBox x:Name="_chkIsHorizontal" Grid.Column="0" Grid.Row="6" Content="Horizontal error bars" />
				<CheckBox x:Name="_chkIndependentSize" Grid.Column="0" Grid.Row="8" Content="Indep. size:" />
				<axogcd:LineCapSizeComboBox x:Name="_cbSymbolSize" Grid.Column="1" Grid.Row="8" />
				<CheckBox x:Name="_chkLineSymbolGap" Grid.Column="0" Grid.Row="10" Content="Line/Symbol gap" />
				<CheckBox x:Name="_chkShowEndBars" Grid.Column="0" Grid.Row="12" Content="Show end bars" />
				<CheckBox x:Name="_chkDoNotShift" Grid.Column="0" Grid.Row="14" Content="Don't shift indep. var." />
				<Label Grid.Column="0" Grid.Row="16" Content="Show every nth point:" />
				<axogc:Int32UpDown x:Name="_edSkipFrequency" Grid.Column="1" Grid.Row="16" Minimum="1" />
			</Grid>
		</GroupBox>
	</StackPanel>
</UserControl>