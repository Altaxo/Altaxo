<UserControl x:Class="Altaxo.Gui.Science.Spectroscopy.Calibration.YCalibrationOptionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:localmodel="clr-namespace:Altaxo.Gui.Science.Spectroscopy.Calibration;assembly=AltaxoBase" 
             xmlns:axogc="clr-namespace:Altaxo.Gui.Common"
             d:DataContext="{d:DesignInstance Type=localmodel:YCalibrationOptionsController}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="4"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="4"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5"
                          Header="Spectral preprocessing:">
            <ContentControl Content="{Binding PreprocessingController.ViewObject}"/>
        </GroupBox>


        <Label Grid.Row="2" Grid.Column="0"
                       Content="Curve shape:"/>

        <ComboBox Grid.Row="4" Grid.Column="0"
                          ItemsSource="{Binding AvailableShapes.Items}"
                          SelectedItem="{Binding AvailableShapes.SelectedItem, Mode=TwoWay}"/>

        <Label Grid.Row="2" Grid.Column="2"
                       Content="No. of terms:"/>

        <axogc:Int32UpDown Grid.Row="4" Grid.Column="2"
                           Value="{Binding NumberOfTerms}"
                           Minimum="0"
                           />

        <Label Grid.Row="2" Grid.Column="4"
                       Content="Baseline order:"/>

        <axogc:Int32UpDown Grid.Row="4" Grid.Column="4"
                                   Value="{Binding OrderOfBaselinePolynomial}"
                                   Minimum="-1"/>

        <Label Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3"
                       Content="Parameters of curve:"/>

        <ListView Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="3" ItemsSource="{Binding ParametersOfCurve}">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn x:Name="_valueColumn" Header="Value" Width="100">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Width="{Binding ActualWidth, ElementName=_valueColumn}" Padding="4,0,12,0" >
                                        <axogc:NumericDoubleTextBox SelectedValue="{Binding Value}" HorizontalAlignment="Stretch"/>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>

</UserControl>
