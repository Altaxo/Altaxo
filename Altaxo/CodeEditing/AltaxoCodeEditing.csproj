<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop" InitialTargets="GenAssInfo">
  <PropertyGroup>
    <TargetFrameworks>net48;netcoreapp3.1</TargetFrameworks>
    <AssemblyName>AltaxoCodeEditing</AssemblyName>
    <LangVersion>latest</LangVersion>
    <UseWPF>true</UseWPF>
    <RootNamespace>Altaxo</RootNamespace>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>Keys\AltaxoCodeEditing.Private.snk</AssemblyOriginatorKeyFile>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <IntermediateOutputPath>obj\$(Configuration)\$(TargetFramework)\</IntermediateOutputPath>
    <OutputPath>..\..\rt$(TargetFramework)\bin</OutputPath>
    <DefineConstants></DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="Properties\AssemblyInfo.cs" Visible="true" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Libraries\ICSharpCode.AvalonEdit\ICSharpCode.AvalonEdit.csproj" />
  </ItemGroup>
  
  <ItemGroup>
     <Reference Include="Microsoft.CodeAnalysis">
      <HintPath>LibrariesBin\Microsoft.CodeAnalysis.dll</HintPath>
    </Reference>
    <Reference Include="Microsoft.CodeAnalysis.CSharp">
      <HintPath>LibrariesBin\Microsoft.CodeAnalysis.CSharp.dll</HintPath>
    </Reference>
    <Reference Include="Microsoft.CodeAnalysis.CSharp.Features">
      <HintPath>LibrariesBin\Microsoft.CodeAnalysis.CSharp.Features.dll</HintPath>
    </Reference>
    <Reference Include="Microsoft.CodeAnalysis.CSharp.Workspaces">
      <HintPath>LibrariesBin\Microsoft.CodeAnalysis.CSharp.Workspaces.dll</HintPath>
    </Reference>
    <Reference Include="Microsoft.CodeAnalysis.Features">
      <HintPath>LibrariesBin\Microsoft.CodeAnalysis.Features.dll</HintPath>
    </Reference>
    <Reference Include="Microsoft.CodeAnalysis.Scripting">
      <HintPath>LibrariesBin\$(TargetFramework)\Microsoft.CodeAnalysis.Scripting.dll</HintPath>
    </Reference>
    <Reference Include="Microsoft.CodeAnalysis.Workspaces">
      <HintPath>LibrariesBin\Microsoft.CodeAnalysis.Workspaces.dll</HintPath>
    <Aliases>MCW</Aliases>
    </Reference>
    </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'netcoreapp3.1' ">
    <PackageReference Include="Microsoft.DiaSymReader" Version="1.3.0" />
    <PackageReference Include="System.ComponentModel.Composition" Version="4.7.0" />
    <PackageReference Include="System.Composition.Hosting" Version="1.4.1" />
    <PackageReference Include="System.Composition.TypedParts" Version="1.4.1" />
    <PackageReference Include="System.Composition.AttributedModel" Version="1.4.1" />
  </ItemGroup>
  
     <ItemGroup Condition=" '$(TargetFramework)' == 'net48' ">
    <Reference Include="Microsoft.CSharp" />

    <Reference Include="Microsoft.DiaSymReader">
      <HintPath>LibrariesBin\$(TargetFramework)\Microsoft.DiaSymReader.dll</HintPath>
    </Reference>
    
      <Reference Include="System.Memory">
      <HintPath>LibrariesBin\$(TargetFramework)\System.Buffers.dll</HintPath>
    </Reference>
    
      <Reference Include="System.Memory">
      <HintPath>LibrariesBin\$(TargetFramework)\System.Memory.dll</HintPath>
    </Reference>
     
    <Reference Include="System.Collections.Immutable">
      <HintPath>LibrariesBin\$(TargetFramework)\System.Collections.Immutable.dll</HintPath>
    </Reference>
    <Reference Include="System.ComponentModel.Composition" />
    <Reference Include="System.Composition.AttributedModel">
      <HintPath>LibrariesBin\$(TargetFramework)\System.Composition.AttributedModel.dll</HintPath>
    </Reference>
    <Reference Include="System.Numerics.Vectors">
      <HintPath>LibrariesBin\System.Numerics.Vectors.dll</HintPath>
    </Reference>
        <Reference Include="System.Composition.Hosting">
      <HintPath>LibrariesBin\$(TargetFramework)\System.Composition.Hosting.dll</HintPath>
    </Reference>
    <Reference Include="System.Composition.TypedParts">
      <HintPath>LibrariesBin\$(TargetFramework)\System.Composition.TypedParts.dll</HintPath>
    </Reference>
     <Reference Include="System.Composition.Runtime">
      <HintPath>LibrariesBin\System.Composition.Runtime.dll</HintPath>
    </Reference> <Reference Include="System.Reflection.Metadata">
      <HintPath>LibrariesBin\$(TargetFramework)\System.Reflection.Metadata.dll</HintPath>
    </Reference>
    <Reference Include="System.Runtime.CompilerServices.Unsafe">
      <HintPath>LibrariesBin\$(TargetFramework)\System.Runtime.CompilerServices.Unsafe.dll</HintPath>
    </Reference>
    <Reference Include="System.Threading.Tasks.Extensions">
      <HintPath>LibrariesBin\$(TargetFramework)\System.Threading.Tasks.Extensions.dll</HintPath>
    </Reference>
  </ItemGroup>
  <UsingTask TaskName="GitVersionFile" AssemblyFile="..\..\MSBuildVersioning.dll" />
  <Target Name="GenAssInfo">
    <GitVersionFile TemplateFile="Properties\AssemblyInfo.cs" DestinationFile="Properties\AssemblyInfo.autogenerated.cs" SettingsFile="..\..\MSBuildVersioning.xml" />
  </Target>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="copy $(ProjectDir)\LibrariesBin\*.dll $(ProjectDir)..\..\rt$(TargetFramework)\bin" />
  </Target>
</Project>