<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop" InitialTargets="GenAssInfo">
  <PropertyGroup>
    <TargetFrameworks>net48;netcoreapp3.1</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <UseWPF>true</UseWPF>
    <RootNamespace>Altaxo</RootNamespace>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <IntermediateOutputPath>obj\$(Configuration)\$(TargetFramework)\</IntermediateOutputPath>
    <OutputPath>..\..\rt$(TargetFramework)\bin</OutputPath>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="Properties\AssemblyInfo.cs" Visible="true" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\Core\AltaxoCore.csproj" />
    <ProjectReference Include="..\Base\AltaxoBase.csproj" />
    <ProjectReference Include="..\Base.Presentation\AltaxoBase.Presentation.csproj" />
    <ProjectReference Include="..\Dom\AltaxoDom.csproj" />
    <ProjectReference Include="..\CodeEditing\AltaxoCodeEditing.csproj" />
    <ProjectReference Include="..\..\Libraries\WpfMath\WpfMath.csproj" />
    <ProjectReference Include="..\..\Libraries\Markdig.Wpf\Markdig.Wpf.csproj" />
    <ProjectReference Include="..\MarkdownEditing\AltaxoMarkdownEditing.csproj" />
    <ProjectReference Include="..\HelpViewer\AltaxoHelpViewer.csproj" />
  </ItemGroup>

  <ItemGroup Condition=" '$(TargetFramework)' == 'net48' ">
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Windows.Forms" />
    <Reference Include="System.IO.Compression" />
  </ItemGroup>
  
  <UsingTask TaskName="GitVersionFile" AssemblyFile="..\..\MSBuildVersioning.dll" />
  <Target Name="GenAssInfo">
    <GitVersionFile TemplateFile="Properties\AssemblyInfo.cs" DestinationFile="Properties\AssemblyInfo.autogenerated.cs" SettingsFile="..\..\MSBuildVersioning.xml" />
  </Target>
  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Exec Command="if not exist $(SolutionDir)rt$(TargetFramework)\AddIns mkdir $(SolutionDir)rt$(TargetFramework)\AddIns&#xD;&#xA;copy $(ProjectDir)AltaxoCore.addin $(SolutionDir)rt$(TargetFramework)\AddIns" />
  </Target>
</Project>
