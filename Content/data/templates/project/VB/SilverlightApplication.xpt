        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
>
    <Deployment.Parts>
    </Deployment.Parts>
</Deployment>]]></File>
			
			<File name="Properties\AssemblyInfo.vb" src="DefaultAssemblyInfo.vb" />
			
		</Files>
	</Project>
</Template>