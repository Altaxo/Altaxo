<?xml version="1.0"?>
<EDITACTIONS>
        <!-- TextArea Context Menu -->
        <CONTEXTMENU>
                <MENU NAME = "${res:XML.TextAreaContextMenu.Cut}"   ICON = "CutIcon" EVENT = "SharpDevelop.Actions.Menu.CutAction"   SHORTCUT = "Ctrl+X" />
                <MENU NAME = "${res:XML.TextAreaContextMenu.Copy}"  ICON = "CopyIcon" EVENT = "SharpDevelop.Actions.Menu.CopyAction"  SHORTCUT = "Ctrl+C" />
                <MENU NAME = "${res:XML.TextAreaContextMenu.Paste}" ICON = "PasteIcon" EVENT = "SharpDevelop.Actions.Menu.PasteAction" SHORTCUT = "Ctrl+V" />
                <MENU NAME = "-" />
                <MENU NAME = "${res:XML.MainMenu.FileMenu.Save}"    ICON = "SaveIcon" EVENT = "SharpDevelop.Actions.Menu.SaveFile"/>
                <MENU NAME = "${res:XML.MainMenu.FileMenu.SaveAs}"  EVENT = "SharpDevelop.Actions.Menu.SaveFileAs"/>
                <MENU NAME = "${res:XML.MainMenu.FileMenu.Close}"   EVENT = "SharpDevelop.Actions.Menu.CloseFile"/>
                <MENU NAME = "-" />
                <MENU NAME = "${res:XML.TextAreaContextMenu.Indent}" EVENT = "SharpDevelop.Actions.Menu.IndentSelection" SHORTCUT = "CtrlI" />
                <MENU NAME = "${res:XML.TextAreaContextMenu.FileMode}" ATTRIBUTE = "FileModes" />
                <MENU NAME = "-" />
                <MENU NAME = "${res:XML.TextAreaContextMenu.BufferOptions}" ICON = "Icons.16x16.PropertiesIcon" EVENT = "SharpDevelop.Actions.Menu.ShowBufferOptions" />
        </CONTEXTMENU>
</EDITACTIONS>
