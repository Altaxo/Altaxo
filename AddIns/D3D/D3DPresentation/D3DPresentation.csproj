<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop" InitialTargets="GenAssInfo;DoCompileShaders">
  <PropertyGroup>
    <TargetFrameworks>net48;net5.0-windows</TargetFrameworks>
    <LangVersion>preview</LangVersion>
    <nullable>enable</nullable>
    <UseWPF>true</UseWPF>
    <RootNamespace>Altaxo</RootNamespace>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(TargetFramework)' == 'net48' ">
    <NoWarn>
      1591;
      8600;8601;8602;8603;8604;8618;8625;8764;8766;8767;8768
    </NoWarn>
  </PropertyGroup>
  
  <ItemGroup>
    <Compile Remove="Properties\AssemblyInfo.cs" Visible="true" />
  </ItemGroup>
  <!-- We have to compile the shaders in the pre-built event in order to be ready for embedding as resource - see below
  <ItemGroup>
    <Fx40File Include="Shaders\Lighting.fx" />
    <Fx40File Include="Shaders\GammaCorrector.fx" />
  </ItemGroup>
  -->
  <ItemGroup>
    <ProjectReference Include="..\..\..\Altaxo\Base.Presentation\AltaxoBase.Presentation.csproj" />
    <ProjectReference Include="..\..\..\Altaxo\Base\AltaxoBase.csproj" />
    <ProjectReference Include="..\..\..\Altaxo\Core\AltaxoCore.csproj" />
    <ProjectReference Include="..\..\..\Altaxo\Dom.Presentation\AltaxoDom.Presentation.csproj" />
    <ProjectReference Include="..\..\..\Altaxo\Dom\AltaxoDom.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="SharpDX" Version="4.2.0" />
    <PackageReference Include="SharpDX.D3DCompiler" Version="4.2.0" />
    <PackageReference Include="SharpDX.Direct2D1" Version="4.2.0" />
    <PackageReference Include="SharpDX.Direct3D10" Version="4.2.0" />
    <PackageReference Include="SharpDX.Direct3D9" Version="4.2.0" />
    <PackageReference Include="SharpDX.DXGI" Version="4.2.0" />
    <PackageReference Include="SharpDX.Mathematics" Version="4.2.0" />
  </ItemGroup>
  <ItemGroup>
    <Folder Include="CompiledShaders\Effects\" />
  </ItemGroup>
  <UsingTask TaskName="Shader" AssemblyFile="ShaderCompilerBuildTask.dll" />
  <UsingTask TaskName="GitVersionFile" AssemblyFile="..\..\..\MSBuildVersioning.dll" />
  <Target Name="DoCompileShaders">
    <Shader InputFiles="@(Fx40File)" OutputPath="$(ProjectDir)\CompiledShaders\Effects" Profile="fx_4_0" />
    <Shader InputFiles="@(Vs40File)" OutputPath="$(ProjectDir)\CompiledShaders\VS" Profile="vs_4_0" EntryPoint="VS" />
    <Shader InputFiles="@(Ps40File)" OutputPath="$(ProjectDir)\CompiledShaders\PS" Profile="ps_4_0" EntryPoint="PS" />
  </Target>
  <Target Name="GenAssInfo">
    <GitVersionFile TemplateFile="Properties\AssemblyInfo.cs" DestinationFile="Properties\AssemblyInfo.autogenerated.cs" SettingsFile="..\..\..\MSBuildVersioning.xml" />
  </Target>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="IF NOT EXIST $(SolutionDir)rt$(TargetFramework)\AddIns\D3D\ mkdir $(SolutionDir)rt$(TargetFramework)\AddIns\D3D\&#xD;&#xA;copy $(ProjectDir)D3D.addin $(SolutionDir)rt$(TargetFramework)\AddIns\D3D\&#xD;&#xA;copy $(TargetDir)D3DPresentation.??l $(SolutionDir)rt$(TargetFramework)\AddIns\D3D\&#xD;&#xA;copy $(TargetDir)SharpDX*.??l $(SolutionDir)rt$(TargetFramework)\AddIns\D3D\" />
  </Target>
  <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
    <Shader InputFiles="$(ProjectDir)\Shaders\GammaCorrector.fx" OutputPath="$(ProjectDir)\CompiledShaders\Effects" Profile="fx_4_0" />
    <Shader InputFiles="$(ProjectDir)\Shaders\Lighting.fx" OutputPath="$(ProjectDir)\CompiledShaders\Effects" Profile="fx_4_0" />
  </Target>
</Project>
