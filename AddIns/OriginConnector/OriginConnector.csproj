<Project Sdk="Microsoft.NET.Sdk" InitialTargets="GenAssInfo">
  <PropertyGroup>
    <TargetFrameworks>net48;net5.0</TargetFrameworks>
    <LangVersion>preview</LangVersion>
    <RootNamespace>Altaxo</RootNamespace>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="Properties\AssemblyInfo.cs" Visible="true" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\Altaxo\Base\AltaxoBase.csproj" />
    <ProjectReference Include="..\..\Altaxo\Dom.Presentation\AltaxoDom.Presentation.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="Interop.Origin">
      <HintPath>Libraries\Interop.Origin.dll</HintPath>
    </Reference>
  </ItemGroup>
  <UsingTask TaskName="GitVersionFile" AssemblyFile="..\..\MSBuildVersioning.dll" />
  <Target Name="GenAssInfo">
    <GitVersionFile TemplateFile="Properties\AssemblyInfo.cs" DestinationFile="Properties\AssemblyInfo.autogenerated.cs" SettingsFile="..\..\MSBuildVersioning.xml" />
  </Target>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="mkdir $(SolutionDir)rt$(TargetFramework)\AddIns\OriginConnector\&#xD;&#xA;copy $(TargetDir)Interop.Origin.dll $(SolutionDir)rt$(TargetFramework)\AddIns\OriginConnector\&#xD;&#xA;copy $(ProjectDir)OriginConnector.addin $(SolutionDir)rt$(TargetFramework)\AddIns\OriginConnector\&#xD;&#xA;copy $(TargetDir)OriginConnector.dll $(SolutionDir)rt$(TargetFramework)\AddIns\OriginConnector\" />
  </Target>
</Project>
