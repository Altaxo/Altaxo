<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AssemblyName>OpenXMLAddin</AssemblyName>
    <TargetFramework>net471</TargetFramework>
    <RootNamespace>Altaxo</RootNamespace>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
    <OutputPath>bin\</OutputPath>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="Properties\AssemblyInfo.cs" Visible="true" />
  </ItemGroup>
  <ItemGroup>
    <None Remove="Text\OpenXMLStyles\GitHub.xml" />
  </ItemGroup>
  <ItemGroup>
    <EmbeddedResource Include="Text\OpenXMLStyles\GitHub.xml" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="DocumentFormat.OpenXml" Version="2.9.1" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\..\Altaxo\Base\AltaxoBase.csproj" />
    <ProjectReference Include="..\..\..\Altaxo\Core\AltaxoCore.csproj" />
    <ProjectReference Include="..\..\..\Altaxo\Dom\AltaxoDom.csproj" />
    <ProjectReference Include="..\..\..\Libraries\Markdig\Markdig.csproj" />
    <ProjectReference Include="..\..\..\Libraries\WpfMath\WpfMath.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="PresentationCore" />
  </ItemGroup>
  <UsingTask TaskName="GitVersionFile" AssemblyFile="..\..\..\MSBuildVersioning.dll" />
  <Target Name="DoMakeFileVersion" AfterTargets="Compile">
    <GitVersionFile TemplateFile="Properties\AssemblyInfo.cs" DestinationFile="Properties\AssemblyInfo.autogenerated.cs" SettingsFile="..\..\..\MSBuildVersioning.xml" />
  </Target>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="mkdir $(SolutionDir)rtDir\AddIns\OpenXMLAddin\&#xD;&#xA;copy $(TargetDir)DocumentFormat.OpenXml.dll $(SolutionDir)rtDir\AddIns\OpenXMLAddin\&#xD;&#xA;copy $(TargetDir)OpenXMLAddin.dll $(SolutionDir)rtDir\AddIns\OpenXMLAddin\&#xD;&#xA;copy $(ProjectDir)OpenXML.addin $(SolutionDir)rtDir\AddIns\OpenXMLAddin\" />
  </Target>
</Project>
