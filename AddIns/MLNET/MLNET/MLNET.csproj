<Project Sdk="Microsoft.NET.Sdk" InitialTargets="GenAssInfo">
  <PropertyGroup>
    <AssemblyName>MLNETAddin</AssemblyName>
    <TargetFrameworks>net48; netcoreapp3.1</TargetFrameworks>
    <LangVersion>latest</LangVersion>
    <RootNamespace>Altaxo</RootNamespace>
    <GenerateDocumentationFile>false</GenerateDocumentationFile>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
  </PropertyGroup>
  <ItemGroup>
    <Compile Remove="Properties\AssemblyInfo.cs" Visible="true" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.ML" Version="1.4.0" />
    <PackageReference Include="Microsoft.ML.TimeSeries" Version="1.4.0" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\..\..\Altaxo\Base\AltaxoBase.csproj" />
    <ProjectReference Include="..\..\..\Altaxo\Core\AltaxoCore.csproj" />
    <ProjectReference Include="..\..\..\Altaxo\Dom\AltaxoDom.csproj" />
  </ItemGroup>
  <UsingTask TaskName="GitVersionFile" AssemblyFile="..\..\..\MSBuildVersioning.dll" />
  <Target Name="GenAssInfo">
    <GitVersionFile TemplateFile="Properties\AssemblyInfo.cs" DestinationFile="Properties\AssemblyInfo.autogenerated.cs" SettingsFile="..\..\..\MSBuildVersioning.xml" />
  </Target>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="mkdir $(SolutionDir)rt$(TargetFramework)\AddIns\ML.Net\&#xD;&#xA;copy $(TargetDir)MLNetAddin.dll $(SolutionDir)rt$(TargetFramework)\AddIns\ML.Net\&#xD;&#xA;copy $(TargetDir)Microsoft.ML.*.dll $(SolutionDir)rt$(TargetFramework)\AddIns\ML.Net\&#xD;&#xA;copy $(TargetDir)Newtonsoft.Json.dll $(SolutionDir)rt$(TargetFramework)\AddIns\ML.Net\&#xD;&#xA;copy $(TargetDir)System.*.dll $(SolutionDir)rt$(TargetFramework)\AddIns\ML.Net\&#xD;&#xA;copy $(SolutionDir)Libraries\AssembliesOnly\CpuMathNative.dll $(SolutionDir)rt$(TargetFramework)\AddIns\ML.Net\&#xD;&#xA;copy $(ProjectDir)MLNet.addin $(SolutionDir)rt$(TargetFramework)\AddIns\ML.Net\" />
  </Target>
</Project>
